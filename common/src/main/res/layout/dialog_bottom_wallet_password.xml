<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_dialog__wallet_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/dimens_15dp"
        android:text="请上传钱包安全码进行验证"
        android:textColor="@color/colorTextDefault"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tv_dialog_wallet_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="（钱包安全码为一张二维码图片）"
        android:textColor="@color/colorHint"
        android:textSize="12sp" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/dp_40"
        android:layout_marginBottom="@dimen/dp_40"
        android:background="@color/colorDivider"
        android:focusableInTouchMode="false">

        <ImageView
            android:id="@+id/iv_dialog_add_picture"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:focusableInTouchMode="false"
            android:src="@mipmap/add_picture" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_dialog_sure"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="@dimen/dimens_10dp"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dimens_10dp"
        android:background="@drawable/common_shape_coupon_btn_bg_gray"
        android:clickable="false"
        android:focusableInTouchMode="false"
        android:gravity="center"
        android:text="确认"
        android:textColor="@color/colorTextDefault"
        android:textSize="14sp" />

</LinearLayout>