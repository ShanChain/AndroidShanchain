<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linear_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    android:background="@drawable/shape_bg_dialog_item"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_input_dialog_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="14dp"
            android:layout_marginBottom="@dimen/dimens_10dp"
            android:text="活动规则"
            android:textColor="@color/colorTextDefault"
            android:textSize="@dimen/sp_16" />

        <ImageView
            android:id="@+id/iv_dialog_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_margin="@dimen/dp_10"
            android:visibility="gone"
            android:background="@mipmap/dialog_close" />

    </RelativeLayout>

    <View style="@style/style_text_line_match" />

    <TextView
        android:id="@+id/even_message_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:ellipsize="end"
        android:lineSpacingExtra="4dp"
        android:singleLine="false"
        android:text=""
        android:textColor="@color/colorTextDefault"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/text_count_down"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorViolet"
        android:gravity="center"
        android:layout_gravity="center"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:padding="@dimen/dimens_15dp">


        <Button
            android:id="@+id/btn_dialog_task_detail_sure"
            android:layout_width="180dp"
            android:layout_height="30dp"
            android:background="@drawable/shape_btn_dialog_sure"
            android:text="我知道了"
            android:textColor="#fff"
            android:focusableInTouchMode="false"
            android:textSize="14sp" />

    </LinearLayout>


</LinearLayout>