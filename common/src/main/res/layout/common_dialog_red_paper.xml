<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@null"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/btn_dialog_red_paper_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="20dp"
        android:layout_marginTop="@dimen/dp_4"
        android:focusableInTouchMode="false"
        android:background="@mipmap/dialog_close"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/shape_bg_dialog_item"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_input_dialog_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="14dp"
                android:layout_marginBottom="@dimen/dimens_10dp"
                android:text="我的福包"
                android:textColor="@color/colorTextDefault"
                android:textSize="20sp" />

        </RelativeLayout>

        <View style="@style/style_text_line_match" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_red_paper_list"
            android:layout_width="match_parent"
            android:layout_height="250dp">

        </android.support.v7.widget.RecyclerView>

        <View style="@style/style_text_line_match" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:padding="@dimen/dimens_15dp">


            <Button
                android:id="@+id/btn_dialog_red_paper_sure"
                android:layout_width="180dp"
                android:layout_height="50dp"
                android:background="@drawable/shape_btn_dialog_sure"
                android:focusableInTouchMode="false"
                android:text="领取"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_14" />

        </LinearLayout>

    </LinearLayout>
</LinearLayout>