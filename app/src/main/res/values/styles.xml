<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
       <!-- <item name="android:windowIsTranslucent">true</item>
        <item name="windowNoTitle">true</item>-->
    </style>

    <style name="FullScreenTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="style_radiobutton_report">
        <item name="android:button">@drawable/selector_rediobutton</item>
    </style>

    <style name="style_radiobutton_repeat">
        <item name="android:button">@drawable/selector_rediobutton_repeat</item>
    </style>

    <!--分割线样式-->
    <style name="style_text_line">
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:background">#dcdcdc</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dp</item>
    </style>

    <!--全屏分割线样式-->
    <style name="style_text_line_match">
        <item name="android:background">@color/colorListDivider</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
    </style>

    <!--左边距为75的输入框样式-->
    <style name="style_et_marginleft_75dp">
        <item name="android:background">@null</item>
        <item name="android:textColorHint">@color/colorHint</item>
        <item name="android:textSize">@dimen/text_size_14sp</item>
        <item name="android:layout_marginLeft">75dp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">42dp</item>
    </style>

    <!--左边距为50的输入框样式-->
    <style name="style_et_marginleft_50dp">
        <item name="android:background">@null</item>
        <item name="android:textColorHint">@color/colorHint</item>
        <item name="android:textSize">@dimen/text_size_14sp</item>
        <item name="android:layout_marginLeft">50dp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">42dp</item>
    </style>

    <!--大按钮通用样式-->
    <style name="style_btn_common">
        <item name="android:textSize">@dimen/text_size_14sp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">38dp</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:background">@drawable/shape_btn_regist</item>
        <item name="android:textColor">@color/colorBtn</item>
    </style>

    <!--定义布局抢占焦点,为的是当进入activity时不让输入框获取焦点-->
    <style name="style_obtain_focus">
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
    </style>

    <!--主题颜色工具栏样式-->
    <style name="style_toolbar_color_theme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:background">@color/colorTheme</item>
    </style>

    <!--白色工具栏样式-->
    <style name="style_toolbar_color_white">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">42dp</item>
        <item name="android:background">@color/colorWhite</item>
    </style>

    <!--全屏分割线样式-->
    <style name="style_addfriend_divider">
        <item name="android:background">@color/colorAddFriendDivider</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
    </style>

    <style name="bottom_pop_anim" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/popup_enter</item>
        <item name="android:windowExitAnimation">@anim/popup_exit</item>
    </style>

    <!-- dialog样式 -->
    <style name="dialog_custom" parent="@android:style/Theme.Dialog">
        <item name="android:windowIsFloating">true</item>    <!--是否浮在界面上-->
        <item name="android:windowIsTranslucent">false</item> <!--是否半透明-->
        <item name="android:windowNoTitle">false</item>       <!--是否有标题-->
        <item name="android:windowBackground">@android:color/transparent</item> <!--窗口背景色透明-->
        <item name="android:backgroundDimEnabled">true</item> <!--背景是否模糊显示-->
    </style>

    <!-- dialog底部弹出菜单动画 -->
    <style name="bottom_menu_animation" parent="android:Animation">
        <item name="@android:windowEnterAnimation">@anim/bottom_menu_enter</item>
        <item name="@android:windowExitAnimation">@anim/bottom_menu_exit</item>
    </style>

    <!--左右边距为15dp的分割线-->
    <style name="style_line_margin_15dp">
        <item name="android:layout_marginLeft">@dimen/margin_15dp</item>
        <item name="android:layout_marginRight">@dimen/margin_15dp</item>
        <item name="android:background">#dcdcdc</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
    </style>

    <!--常见问题条目的样式-->
    <style name="style_text_common_problem">
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="android:clickable">true</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingLeft">@dimen/margin_15dp</item>
        <item name="android:textSize">@dimen/text_size_14sp</item>
        <item name="android:textColor">@color/colorBtn</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="style_text_14sp_color_btn">
        <item name="android:textSize">@dimen/text_size_14sp</item>
        <item name="android:textColor">@color/colorBtn</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!-- ######### 时间控件  -->

    <style name="time_label">
        <item name="android:textSize">@dimen/time_label_size</item>
        <item name="android:textColor">@color/numbers_text_color</item>
    </style>

    <style name="ampm_label">
        <item name="android:textSize">@dimen/ampm_label_size</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/ampm_text_color</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="day_of_week_label_condensed" />

    <style name="style_text_creation">
        <item name="android:paddingTop">18dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:background">@mipmap/creation_btn_bubble_default</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <!--   时间控件 ####### -->

</resources>
