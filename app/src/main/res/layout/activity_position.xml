<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_position"
    android:orientation="vertical"
    android:background="@color/colorWhite"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--顶部工具栏，可设置沉浸式效果-->
    <com.shanchain.shandata.widgets.toolBar.ArthurToolBar
        android:id="@+id/toolbar_position"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:background="@color/colorWhite"
        app:leftText="取消"
        app:leftTextColor="@color/colorBtn"
        app:leftTextSize="14"
        app:titleColor="@color/colorBtn"
        app:titleText="定位"
        app:titleTextSize="18"
        />

    <!--进入activity时让抢占焦点，主要是为了不让输入框获取焦点-->
    <LinearLayout
        style="@style/style_obtain_focus"></LinearLayout>

    <TextView
        android:background="@color/colorAddFriendDivider"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <EditText
        android:id="@+id/et_position_search"
        android:textColorHint="#c0c0c0"
        android:textSize="@dimen/text_size_14sp"
        android:textColor="@color/colorHint"
        android:hint="搜附近位置"
        android:drawablePadding="28dp"
        android:paddingLeft="@dimen/margin_15dp"
        android:drawableLeft="@mipmap/search_button_search_default"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="6dp"
        android:layout_marginLeft="@dimen/margin_15dp"
        android:layout_marginRight="@dimen/margin_15dp"
        android:background="@drawable/shap_edit_search_pressed"
        android:layout_width="match_parent"
        android:layout_height="28dp"/>
    <TextView
        android:background="@color/colorAddFriendDivider"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_position_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </android.support.v7.widget.RecyclerView>
</LinearLayout>
