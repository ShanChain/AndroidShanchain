<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_share_story"
    android:orientation="vertical"
    android:background="@color/colorWhite"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.shanchain.shandata.widgets.toolBar.ArthurToolBar
        android:id="@+id/toolbar_share_story"
        style="@style/style_toolbar_color_white"
        android:background="@color/colorWhite"
        app:rightText="确定"
        app:rightTextColor="@color/colorBtn"
        app:titleColor="@color/colorBtn"
        app:titleText="分享"
        app:titleTextSize="16"/>

    <View
        style="@style/style_text_line_match"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="25dp"
        android:paddingLeft="28dp">

        <ImageView
            android:id="@+id/iv_share_story_img"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:scaleType="centerCrop"
            android:src="@drawable/photo_yue"/>

        <TextView
            android:id="@+id/tv_share_story_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="48dp"
            android:layout_weight="1"
            android:text="远离北上广"
            android:textColor="@color/colorBtn"
            android:textSize="@dimen/text_size_12sp"/>


        <TextView
            android:id="@+id/tv_share_story_result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="64dp"
            android:text="发布成功！"
            android:textColor="@color/colorBtn"
            android:textSize="@dimen/text_size_14sp"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="60dp">

        <ImageView
            android:id="@+id/iv_share_story_shan"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginLeft="67dp"
            android:scaleType="centerCrop"
            android:src="@drawable/photo_yue"/>


        <TextView
            android:id="@+id/tv_share_story_shan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="96dp"
            android:text="善券+35"
            android:textColor="@color/colorBtn"
            android:textSize="@dimen/text_size_12sp"/>

    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="28dp"
        android:layout_marginTop="78dp"
        android:clickable="false"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_other_login"
            android:layout_width="wrap_content"
            android:layout_height="28dp"
            android:layout_centerInParent="true"
            android:clickable="true"
            android:gravity="center_vertical"
            android:text="分享到"
            android:textColor="#666666"/>

        <TextView
            android:layout_width="124dp"
            android:layout_height="1dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="9dp"
            android:layout_toLeftOf="@id/tv_other_login"
            android:background="#979797"/>

        <TextView
            android:layout_width="124dp"
            android:layout_height="1dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="9dp"
            android:layout_toRightOf="@id/tv_other_login"
            android:background="#979797"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="28dp">

        <ImageView
            android:id="@+id/iv_share_wechat"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@mipmap/shareit_link_wechat_default"/>

        <ImageView
            android:id="@+id/iv_share_circleoffriends"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@mipmap/shareit_link_circleoffriends_default"/>

        <ImageView
            android:id="@+id/iv_share_qq"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@mipmap/shareit_link_qq_default"/>

        <ImageView
            android:id="@+id/iv_share_qzone"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@mipmap/shareit_link_qzone_default"/>

        <ImageView
            android:id="@+id/iv_share_weibo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@mipmap/shareit_link_weibo_default"/>

    </LinearLayout>

</LinearLayout>
