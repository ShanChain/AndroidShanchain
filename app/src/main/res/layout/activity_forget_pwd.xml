<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_forget_pwd"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.shanchain.mvp.view.activity.ForgetPwdActivity">

    <!--顶部工具栏，可设置沉浸式效果-->
    <com.shanchain.widgits.toolBar.ArthurToolBar
        android:id="@+id/toolbar_forget"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/colorTheme"
        app:leftImage="@mipmap/regsitre_icon_back_default"
        app:titleColor="@color/colorWhite"
        app:titleText="忘记密码"
        app:titleTextSize="16"/>
    <!--进入activity时让抢占焦点，主要是为了不让输入框获取焦点-->
    <LinearLayout
        style="@style/style_obtain_focus"></LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_marginTop="35dp"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="64dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:padding="10dp"
            android:text="账号"
            android:textColor="@color/colorBtn"
            android:textSize="@dimen/text_size_14sp"/>

        <EditText
            android:id="@+id/et_forget_account"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="@null"
            android:hint="请输入手机/邮箱号"
            android:lines="1"
            android:padding="10dp"
            android:textColorHint="@color/colorHint"
            android:textSize="@dimen/text_size_14sp"/>
    </LinearLayout>

    <TextView
        style="@style/style_text_line"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="64dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:padding="10dp"
            android:text="验证码"
            android:textColor="@color/colorBtn"
            android:textSize="@dimen/text_size_14sp"/>

        <EditText
            android:id="@+id/et_forget_checkcode"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="@null"
            android:hint="请输入验证码"
            android:lines="1"
            android:padding="10dp"
            android:textColorHint="@color/colorHint"
            android:textSize="@dimen/text_size_14sp"/>

        <Button
            android:id="@+id/btn_forget_checkcode"
            android:layout_width="100dp"
            android:layout_height="28dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/shap_btn_login"
            android:text="获取验证码"
            android:textColor="@color/colorWhite"
            android:textSize="12sp"/>

    </LinearLayout>

    <TextView
        style="@style/style_text_line"/>


    <Button
        android:id="@+id/btn_forget_next"
        style="@style/style_btn_common"
        android:layout_marginTop="35dp"
        android:background="@drawable/shap_btn_login"
        android:text="下一步"
        android:textColor="@color/colorWhite"/>

</LinearLayout>
