<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:background="@drawable/shape_bg_box_found"
              android:layout_marginLeft="@dimen/margin_15dp"
              android:layout_marginRight="@dimen/margin_15dp"
              android:layout_width="match_parent"
              android:layout_height="317dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="88dp">

        <TextView
            android:id="@+id/tv_join_route_story_name"
            android:text="回家"
            android:textSize="18sp"
            android:textColor="@color/colorBtn"
            android:layout_marginLeft="@dimen/margin_15dp"
            android:layout_marginTop="@dimen/margin_15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_alignParentBottom="true"
            android:lineSpacingExtra="2dp"
            android:id="@+id/tv_join_route_story_des"
            android:layout_marginLeft="@dimen/margin_15dp"
            android:textSize="@dimen/text_size_14sp"
            android:textColor="@color/colorBtn"
            android:text="在那样一个小城市，才会明白真正的生活。"
            android:layout_marginTop="10dp"
            android:lines="2"
            android:ellipsize="end"
            android:layout_width="148dp"
            android:layout_height="wrap_content"/>

        <ImageView
            android:id="@+id/iv_join_route_author_avatar"
            android:scaleType="centerCrop"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/margin_15dp"
            android:layout_marginRight="@dimen/margin_15dp"
            android:src="@drawable/photo_bear"
            android:layout_width="48dp"
            android:layout_height="48dp"/>

        <TextView
            android:layout_alignParentBottom="true"
            android:id="@+id/tv_join_route_author_nick"
            android:text="路人甲"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/margin_15dp"
            android:textSize="@dimen/text_size_14sp"
            android:textColor="@color/colorBtn"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_join_route_dynamic"
        android:background="@drawable/shape_bg_box_found"
        android:layout_marginLeft="@dimen/margin_15dp"
        android:layout_marginRight="@dimen/margin_15dp"
        android:layout_marginTop="36dp"
        android:layout_width="match_parent"
        android:layout_height="156dp">

        <TextView
            android:id="@+id/tv_join_route_dynamic_time"
            android:textSize="@dimen/text_size_14sp"
            android:textColor="@color/colorBtn"
            android:layout_marginLeft="@dimen/margin_15dp"
            android:layout_marginTop="10dp"
            android:text="2017年5月29日16:50"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/margin_15dp"
            android:layout_marginTop="10dp"
            android:textSize="@dimen/text_size_14sp"
            android:textColor="@color/colorBtn"
            android:id="@+id/tv_join_route_dynamic_address"
            android:text="深圳市"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageView
            android:id="@+id/iv_join_route_dynamic"
            android:src="@drawable/photo_water"
            android:layout_marginLeft="@dimen/margin_15dp"
            android:layout_marginTop="38dp"
            android:scaleType="centerCrop"
            android:layout_width="77dp"
            android:layout_height="77dp"/>

        <TextView
            android:id="@+id/tv_join_route_dynamic_des"
            android:layout_toRightOf="@id/iv_join_route_dynamic"
            android:maxLines="3"
            android:layout_marginLeft="@dimen/margin_15dp"
            android:layout_marginTop="38dp"
            android:layout_marginRight="@dimen/margin_15dp"
            android:text="这是深圳的普通的一天，这一天很特别"
            android:ellipsize="end"
            android:textSize="@dimen/text_size_14sp"
            android:textColor="@color/colorBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:textSize="@dimen/text_size_14sp"
            android:textColor="@color/colorBtn"
            android:id="@+id/tv_join_route_dynamic_days"
            android:text="空巢天数 7天"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/margin_15dp"
            android:layout_marginBottom="13dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </RelativeLayout>

    <TextView
        android:id="@+id/tv_join_route_order"
        android:layout_gravity="right"
        android:layout_marginRight="@dimen/margin_15dp"
        android:layout_marginTop="10dp"
        android:textSize="@dimen/text_size_12sp"
        android:textColor="@color/colorHint"
        android:text="17代"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</LinearLayout>