<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@drawable/shap_bg_edit_report"
              android:orientation="vertical"
              android:padding="40dp">

    <Button
        android:id="@+id/btn_dialog_regist_phone"
        android:layout_width="200dp"
        android:layout_height="38dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/shap_btn_login"
        android:text="手机/邮箱注册"
        android:textColor="@color/colorWhite"/>

    <Button
        android:id="@+id/btn_dialog_regist_invite"
        android:layout_width="200dp"
        android:layout_height="38dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:background="@drawable/shap_btn_regist"
        android:text="邀请码注册"
        android:textColor="@color/colorBtn"/>

</LinearLayout>