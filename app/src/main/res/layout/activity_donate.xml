<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_donate"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:orientation="vertical">

    <com.shanchain.shandata.widgets.toolBar.ArthurToolBar
        android:id="@+id/toolbar_donate"
        style="@style/style_toolbar_color_white"
        android:background="@color/colorWhite"
        app:leftImage="@mipmap/nav_btn_return_default"
        app:titleColor="@color/colorBtn"
        app:titleText="捐赠"
        app:titleTextSize="16"/>

    <TextView
        style="@style/style_text_line_match"/>


    <LinearLayout
        style="@style/style_obtain_focus"/>

    <TextView
        android:id="@+id/tv_donate_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="24dp"
        android:text="2017净水活动"
        android:textColor="@color/colorBtn"
        android:textSize="18sp"/>

    <ImageView
        android:id="@+id/iv_donate_img"
        android:layout_width="match_parent"
        android:layout_height="172dp"
        android:layout_marginLeft="@dimen/margin_15dp"
        android:layout_marginRight="@dimen/margin_15dp"
        android:layout_marginTop="@dimen/margin_15dp"
        android:scaleType="centerCrop"
        android:src="@drawable/photo_public"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="62dp"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_15dp"
            android:text="你确认要捐赠:"
            android:textColor="@color/colorBtn"
            android:textSize="@dimen/text_size_14sp"/>

        <LinearLayout
            android:gravity="center_vertical"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:background="@mipmap/donate_icon_round_default">

            <EditText
                android:textSize="@dimen/text_size_14sp"
                android:background="@null"
                android:id="@+id/et_donate_counts"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="@dimen/margin_15dp"
                android:layout_weight="1"
                android:inputType="number"
                android:text="100"
                android:textColor="@color/colorBtn"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="10dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_donate_increase"
                    android:layout_width="20dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:src="@mipmap/donate_btn_increase_default"/>

                <ImageView
                    android:id="@+id/iv_donate_cutback"
                    android:layout_width="20dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:src="@mipmap/donate_btn_cutback_default"/>

            </LinearLayout>


        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:text="善券"
            android:textColor="@color/colorBtn"
            android:textSize="@dimen/text_size_14sp"/>

    </LinearLayout>

    <TextView
        android:id="@+id/tv_donate_remaining"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="28dp"
        android:text="(你现在共有125善券)"
        android:textColor="@color/colorHint"
        android:textSize="@dimen/text_size_14sp"/>

    <Button
        android:id="@+id/btn_donate_sure"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:layout_marginLeft="@dimen/margin_15dp"
        android:layout_marginRight="@dimen/margin_15dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/shape_btn_login"
        android:text="确认捐赠善券"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/text_size_14sp"
        />


</LinearLayout>
