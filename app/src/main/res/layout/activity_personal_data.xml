<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_personal_data"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:orientation="vertical">

    <com.shanchain.shandata.widgets.toolBar.ArthurToolBar
        android:id="@+id/toolbar_mine_personal_data"
        style="@style/style_toolbar_color_white"
        android:background="@color/colorWhite"
        app:leftImage="@mipmap/nav_btn_return_default"
        app:rightText="保存"
        app:rightTextColor="@color/colorBtn"
        app:rightTextSize="14"
        app:titleColor="@color/colorBtn"
        app:titleText="个人资料"
        app:titleTextSize="16"/>

    <LinearLayout
        style="@style/style_obtain_focus"></LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorAddFriendDivider"/>

    <LinearLayout
        android:id="@+id/ll_personal_data_avatar"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/margin_15dp"
            android:text="头像"
            android:textColor="@color/colorBtn"
            android:textSize="@dimen/text_size_14sp"/>

        <ImageView
            android:id="@+id/iv_personal_data_avatar"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/margin_15dp"
            android:src="@mipmap/mine_icon_commonprobler_default"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/margin_15dp"
            android:src="@mipmap/personalinformation_btn_enter_default"/>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorAddFriendDivider"/>

    <LinearLayout
        android:id="@+id/ll_personal_data_bg"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/margin_15dp"
            android:text="背景图"
            android:textColor="@color/colorBtn"
            android:textSize="@dimen/text_size_14sp"/>

        <ImageView
            android:id="@+id/iv_personal_data_bg"
            android:layout_width="58dp"
            android:layout_height="38dp"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/margin_15dp"
            android:src="@drawable/mine_bg_summer_default"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/margin_15dp"
            android:src="@mipmap/personalinformation_btn_enter_default"/>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/colorAddFriendDivider"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp">

        <TextView
            android:layout_width="62dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/margin_15dp"
            android:text="昵称"
            android:textColor="@color/colorHint"
            android:textSize="14sp"/>

        <com.shanchain.shandata.widgets.other.ClearEditText
            android:id="@+id/et_personal_data_nick"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/margin_15dp"
            android:background="@null"
            android:lines="1"
            android:maxLength="12"
            android:textColor="@color/colorBtn"/>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="62dp"
        android:background="@color/colorAddFriendDivider"/>

    <LinearLayout
        android:id="@+id/ll_personal_data_sex"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="?android:attr/selectableItemBackground"
        android:clickable="true">

        <TextView
            android:layout_width="62dp"
            android:layout_height="48dp"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/margin_15dp"
            android:text="性别"
            android:textColor="@color/colorHint"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/tv_personal_data_sex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorBtn"
            android:textSize="@dimen/text_size_14sp"/>

    </LinearLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="62dp"
        android:background="@color/colorAddFriendDivider"/>


    <LinearLayout
        android:id="@+id/ll_personal_data_birth"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="?android:attr/selectableItemBackground"
        android:clickable="true">

        <TextView
            android:layout_width="62dp"
            android:layout_height="48dp"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/margin_15dp"
            android:text="生日"
            android:textColor="@color/colorHint"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/tv_personal_data_birth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorBtn"
            android:textSize="@dimen/text_size_14sp"/>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="62dp"
        android:background="@color/colorAddFriendDivider"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp">

        <TextView
            android:layout_width="62dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/margin_15dp"
            android:text="签名"
            android:textColor="@color/colorHint"
            android:textSize="14sp"/>

        <com.shanchain.shandata.widgets.other.ClearEditText
            android:id="@+id/et_personal_data_signature"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/margin_15dp"
            android:background="@null"
            android:lines="1"
            android:textColor="@color/colorBtn"/>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="62dp"
        android:background="@color/colorAddFriendDivider"/>

</LinearLayout>
