<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_reset_pwd"
    android:background="@color/colorWhite"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!--顶部工具栏，可设置沉浸式效果-->
    <com.shanchain.shandata.widgets.toolBar.ArthurToolBar
        android:id="@+id/toolbar_reset"
        style="@style/style_toolbar_color_theme"
        app:leftImage="@mipmap/regsitre_icon_back_default"
        app:titleColor="@color/colorWhite"
        app:titleText="重置密码"
        app:titleTextSize="16"/>

    <LinearLayout
        style="@style/style_obtain_focus"></LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_marginTop="35dp"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="84dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:padding="10dp"
            android:text="新密码"
            android:textColor="@color/colorBtn"
            android:textSize="@dimen/text_size_14sp"/>

        <EditText
            android:id="@+id/et_reset_pwd"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="@null"
            android:hint="6-20个字符"
            android:lines="1"
            android:maxLength="20"
            android:padding="10dp"
            android:textColorHint="@color/colorHint"
            android:textSize="@dimen/text_size_14sp"/>
    </LinearLayout>

    <TextView
        style="@style/style_text_line"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="84dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:padding="10dp"
            android:text="确认密码"
            android:textColor="@color/colorBtn"
            android:textSize="@dimen/text_size_14sp"/>

        <EditText
            android:id="@+id/et_reset_pwdconfirm"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="@null"
            android:hint="6-20个字符"
            android:lines="1"
            android:maxLength="20"
            android:padding="10dp"
            android:textColorHint="@color/colorHint"
            android:textSize="@dimen/text_size_14sp"/>

    </LinearLayout>

    <TextView
        style="@style/style_text_line"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal"
        android:text="可输入6-20位,不得使用符号表情"
        android:textColor="@color/colorHint"
        android:textSize="@dimen/text_size_12sp"/>

    <Button
        android:id="@+id/btn_reset_comfirm"
        style="@style/style_btn_common"
        android:layout_marginTop="35dp"
        android:background="@drawable/shap_btn_login"
        android:text="确认"
        android:textColor="@color/colorWhite"/>

</LinearLayout>
