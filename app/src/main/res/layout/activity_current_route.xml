<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_current_route"
    android:orientation="vertical"
    android:background="@color/colorWhite"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.shanchain.shandata.widgets.toolBar.ArthurToolBar
        android:id="@+id/toolbar_current_route"
        style="@style/style_toolbar_color_white"
        android:background="@color/colorWhite"
        app:leftImage="@mipmap/nav_btn_return_default"
        app:titleColor="@color/colorBtn"
        app:titleText="当前路线"
        app:titleTextSize="16"/>

    <View
        style="@style/style_text_line_match"/>

    <RelativeLayout
        android:layout_marginTop="13dp"
        android:layout_width="match_parent"
        android:layout_height="88dp">

        <TextView
            android:id="@+id/tv_current_route_story_name"
            android:text="回家"
            android:textSize="18sp"
            android:textColor="@color/colorBtn"
            android:layout_marginLeft="@dimen/margin_15dp"
            android:layout_marginTop="@dimen/margin_15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_alignParentBottom="true"
            android:lineSpacingExtra="2dp"
            android:id="@+id/tv_current_route_story_des"
            android:layout_marginLeft="@dimen/margin_15dp"
            android:textSize="@dimen/text_size_14sp"
            android:textColor="@color/colorBtn"
            android:text="在那样一个小城市，才会明白真正的生活。"
            android:layout_marginTop="10dp"
            android:lines="2"
            android:ellipsize="end"
            android:layout_width="180dp"
            android:layout_height="wrap_content"/>

        <ImageView
            android:id="@+id/iv_current_route_author_avatar"
            android:scaleType="centerCrop"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/margin_15dp"
            android:layout_marginRight="@dimen/margin_15dp"
            android:src="@drawable/photo_bear"
            android:layout_width="48dp"
            android:layout_height="48dp"/>

        <TextView
            android:layout_alignParentBottom="true"
            android:id="@+id/tv_current_route_author_nick"
            android:text="路人甲"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/margin_15dp"
            android:textSize="@dimen/text_size_14sp"
            android:textColor="@color/colorBtn"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_current_route_dynamic"
        android:background="@drawable/shape_bg_box_found"
        android:layout_marginLeft="@dimen/margin_15dp"
        android:layout_marginRight="@dimen/margin_15dp"
        android:layout_marginTop="36dp"
        android:layout_width="match_parent"
        android:layout_height="238dp">


        <LinearLayout
            android:gravity="center_vertical"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_current_route_dynamic_time"
                android:textSize="@dimen/text_size_14sp"
                android:textColor="@color/colorBtn"
                android:layout_marginLeft="@dimen/margin_15dp"
                android:text="2017年5月29日16:50"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_marginRight="@dimen/margin_15dp"
                android:textSize="@dimen/text_size_14sp"
                android:textColor="@color/colorBtn"
                android:id="@+id/tv_current_route_dynamic_address"
                android:text="深圳市"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <ImageView
                android:id="@+id/iv_current_route_vote"
                android:src="@mipmap/icon_btn_vote_default"
                android:layout_marginRight="@dimen/margin_15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>









        <ImageView
            android:id="@+id/iv_current_route_dynamic"
            android:src="@drawable/photo_water"
            android:layout_marginLeft="@dimen/margin_15dp"
            android:layout_marginTop="55dp"
            android:scaleType="centerCrop"
            android:layout_width="116dp"
            android:layout_height="116dp"/>

        <TextView
            android:id="@+id/tv_current_route_dynamic_des"
            android:layout_toRightOf="@id/iv_current_route_dynamic"
            android:maxLines="5"
            android:layout_marginLeft="38dp"
            android:layout_marginTop="55dp"
            android:layout_marginRight="@dimen/margin_15dp"
            android:text="这是深圳的普通的一天，这一天很特别"
            android:ellipsize="end"
            android:textSize="@dimen/text_size_14sp"
            android:textColor="@color/colorBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:textSize="@dimen/text_size_14sp"
            android:textColor="@color/colorBtn"
            android:id="@+id/tv_current_route_dynamic_days"
            android:text="空巢天数 7天"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/margin_15dp"
            android:layout_marginBottom="13dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_current_route_look_dynamic"
            android:text="查看动态"
            android:textSize="@dimen/text_size_12sp"
            android:textColor="@color/colorDialogBtn"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="@dimen/margin_15dp"
            android:layout_marginBottom="@dimen/margin_15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </RelativeLayout>

    <TextView
        android:id="@+id/tv_current_route_order"
        android:layout_gravity="right"
        android:layout_marginRight="@dimen/margin_15dp"
        android:layout_marginTop="18dp"
        android:textSize="@dimen/text_size_12sp"
        android:textColor="@color/colorHint"
        android:text="17代"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:gravity="center"
            android:textSize="@dimen/text_size_14sp"
            android:textColor="@color/colorHint"
            android:id="@+id/tv_current_route_join"
            android:text="并入"
            android:background="@drawable/shape_bg_circle_hint"
            android:layout_width="48dp"
            android:layout_height="48dp"/>

        <TextView
            android:layout_marginRight="48dp"
            android:layout_marginLeft="48dp"
            android:gravity="center"
            android:textSize="@dimen/text_size_14sp"
            android:textColor="@color/colorHint"
            android:id="@+id/tv_current_route_bifurcation"
            android:text="分岔"
            android:background="@drawable/shape_bg_circle_hint"
            android:layout_width="48dp"
            android:layout_height="48dp"/>

        <TextView
            android:gravity="center"
            android:textSize="@dimen/text_size_14sp"
            android:textColor="@color/colorHint"
            android:id="@+id/tv_current_route_support"
            android:text="支持"
            android:background="@drawable/shape_bg_circle_hint"
            android:layout_width="48dp"
            android:layout_height="48dp"/>

    </LinearLayout>

</LinearLayout>
