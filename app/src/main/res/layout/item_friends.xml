<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/colorWhite"
              android:gravity="center_vertical"
              android:orientation="vertical">

    <TextView
        android:id="@+id/tv_item_friends_head"
        android:layout_width="match_parent"
        android:layout_height="28dp"
        android:background="@color/colorListDivider"
        android:gravity="center_vertical"
        android:lines="1"
        android:paddingLeft="@dimen/margin_15dp"
        android:text="他们也在玩善数者,赶紧关注吧"
        android:textColor="@color/colorHint"
        android:textSize="@dimen/text_size_12sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/iv_friends_avatar"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="@dimen/margin_15dp"
            android:layout_marginTop="5dp"
            android:scaleType="centerCrop"
            android:src="@drawable/photo"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="18dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_item_friends_name"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="杨志"
                android:textColor="@color/colorBtn"
                android:textSize="@dimen/text_size_14sp"/>

            <TextView
                android:id="@+id/tv_item_friends_nickName"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="善数者昵称:杨小智"
                android:textColor="@color/colorHint2"
                android:textSize="@dimen/text_size_12sp"/>

        </LinearLayout>

        <TextView
            android:id="@+id/tv_item_friends_focus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="18dp"
            android:drawablePadding="3dp"
            android:drawableTop="@mipmap/friends_btn_add_to_selected"
            android:lines="1"
            android:text="加关注"/>
    </LinearLayout>

</LinearLayout>