<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="50dp"
              android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/ll_item_home_icon"
        android:layout_centerInParent="true"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:layout_width="40dp"
        android:layout_height="match_parent">


        <TextView
            android:background="#3bbac8"
            android:layout_width="1dp"
            android:layout_height="5dp"/>

        <TextView
            android:background="@mipmap/home_icon_happy_default"
            android:layout_width="40dp"
            android:layout_height="40dp"/>


        <TextView
            android:background="#3bbac8"
            android:layout_width="1dp"
            android:layout_height="5dp"/>

    </LinearLayout>

    <LinearLayout
        android:paddingRight="10dp"
        android:layout_toLeftOf="@id/ll_item_home_icon"
        android:gravity="right"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <TextView
        android:gravity="center_vertical"
        android:text="左边1"
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:layout_height="0dp"/>
        <TextView
            android:gravity="center_vertical"
            android:text="左边2"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="0dp"/>
    </LinearLayout>

    <LinearLayout
        android:paddingLeft="10dp"
        android:layout_toRightOf="@id/ll_item_home_icon"
        android:gravity="left"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv_item_home_left1"
            android:gravity="center_vertical"
            android:text="右边1"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="0dp"/>
        <TextView
            android:gravity="center_vertical"
            android:text="右边2"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="0dp"/>
    </LinearLayout>

</RelativeLayout>