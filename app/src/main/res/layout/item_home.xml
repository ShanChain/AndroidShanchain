<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/ll_item_home_icon"
        android:layout_width="40dp"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:gravity="center_horizontal"
        android:orientation="vertical">


        <TextView
            android:layout_marginBottom="-1dp"
            android:layout_width="1dp"
            android:layout_height="6dp"
            android:background="#3bbac8"/>

        <TextView
            android:textColor="#45becb"
            android:textSize="18sp"
            android:gravity="center"
            android:id="@+id/tv_item_home_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@mipmap/home_icon_round_default"/>


        <TextView
            android:id="@+id/tv_item_home_bottom"
            android:layout_marginTop="-1dp"
            android:layout_width="1dp"
            android:layout_height="6dp"
            android:background="#3bbac8"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_toLeftOf="@id/ll_item_home_icon"
        android:gravity="right"
        android:orientation="vertical"
        android:paddingRight="10dp">

        <TextView
            android:layout_marginTop="5dp"
            android:textColor="@color/colorBtn"
            android:id="@+id/tv_item_home_left1"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="左边1"
            android:textSize="@dimen/text_size_12sp"/>

        <TextView
            android:layout_marginBottom="5dp"
            android:textColor="@color/colorBtn"
            android:id="@+id/tv_item_home_left2"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="左边2"
            android:textSize="@dimen/text_size_12sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_toRightOf="@id/ll_item_home_icon"
        android:gravity="left"
        android:orientation="vertical"
        android:paddingLeft="10dp">

        <TextView
            android:layout_marginTop="5dp"
            android:textColor="@color/colorBtn"
            android:id="@+id/tv_item_home_right1"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="右边1"
            android:textSize="@dimen/text_size_12sp"/>

        <TextView
            android:layout_marginBottom="5dp"
            android:textColor="@color/colorBtn"
            android:id="@+id/tv_item_home_right2"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="右边2"
            android:textSize="@dimen/text_size_12sp"/>
    </LinearLayout>

</RelativeLayout>