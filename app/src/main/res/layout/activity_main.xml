<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.shanchain.mvp.view.activity.MainActivity">

       <!--顶部工具栏，可设置沉浸式效果-->
       <com.shanchain.widgets.toolBar.ArthurToolBar
           android:id="@+id/toolbar_main"
           app:titleColor="@color/colorWhite"
           app:titleText="动态"
           app:titleTextSize="16"
           style="@style/style_toolbar"/>


    <FrameLayout
        android:background="@color/colorWhite"
        android:id="@+id/fl_main_container"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp"></FrameLayout>

    <com.ashokvarma.bottomnavigation.BottomNavigationBar
        android:layout_width="match_parent"
        android:id="@+id/bnb"
        android:layout_height="wrap_content"></com.ashokvarma.bottomnavigation.BottomNavigationBar>
</LinearLayout>
