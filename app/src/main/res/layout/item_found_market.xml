<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="150dp"
              android:layout_height="192dp">
    <android.support.v7.widget.CardView
        android:elevation="50dp"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="134dp"
            android:layout_height="192dp">

            <ImageView
                android:id="@+id/iv_item_found_market_goods"
                android:src="@drawable/photo_bear"
                android:scaleType="centerCrop"
                android:layout_width="134dp"
                android:layout_height="134dp"/>

            <TextView
                android:id="@+id/tv_item_found_market_name"
                android:lines="1"
                android:layout_marginTop="6dp"
                android:text="青岛啤酒"
                android:textColor="@color/colorBtn"
                android:textSize="@dimen/text_size_14sp"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/iv_item_found_market_goods"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tv_item_found_market_price"
                android:layout_marginTop="6dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/tv_item_found_market_name"
                android:lines="1"
                android:text="10善圆"
                android:textSize="@dimen/text_size_12sp"
                android:textColor="@color/colorHint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:background="#979797"
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>
            <TextView
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:background="#979797"
                android:layout_width="1dp"
                android:layout_height="58dp"/>

            <TextView
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:background="#979797"
                android:layout_width="1dp"
                android:layout_height="58dp"/>

        </RelativeLayout>

        </android.support.v7.widget.CardView>

</LinearLayout>