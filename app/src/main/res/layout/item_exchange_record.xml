<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:background="@color/colorWhite"
              android:layout_width="match_parent"
              android:layout_height="76dp">


    <ImageView
        android:src="@drawable/photo_bear"
        android:id="@+id/iv_item_exchange_record_img"
        android:scaleType="centerCrop"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/margin_15dp"
        android:layout_width="48dp"
        android:layout_height="48dp"/>

    <LinearLayout
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="@dimen/margin_15dp"
        android:layout_marginLeft="@dimen/margin_15dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:text="矿泉水"
            android:gravity="center_vertical"
            android:textSize="@dimen/text_size_14sp"
            android:textColor="@color/colorBtn"
            android:id="@+id/tv_item_exchange_goods"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="0dp"/>

        <RelativeLayout
            android:gravity="center_vertical"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp">

            <TextView
                android:id="@+id/tv_item_exchange_order"
                android:textSize="@dimen/text_size_12sp"
                android:textColor="@color/colorHint"
                android:text="单号:20170614010100064"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_alignParentRight="true"
                android:text="-2善圆"
                android:textSize="@dimen/text_size_10sp"
                android:textColor="@color/colorHint"
                android:id="@+id/tv_item_exchange_coins"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </RelativeLayout>

        <TextView
            android:id="@+id/tv_item_exchange_time"
            android:gravity="center_vertical"
            android:text="6月14日  16:03"
            android:textSize="@dimen/text_size_14sp"
            android:textColor="@color/colorHint"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="0dp"/>

    </LinearLayout>



</LinearLayout>