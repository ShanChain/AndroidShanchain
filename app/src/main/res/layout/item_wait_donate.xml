<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <ImageView
        android:src="@drawable/photo_public"
        android:scaleType="centerCrop"
        android:id="@+id/iv_item_wait_donate"
        android:layout_marginLeft="@dimen/margin_15dp"
        android:layout_marginRight="@dimen/margin_15dp"
        android:layout_marginTop="@dimen/margin_15dp"
        android:layout_width="match_parent"
        android:layout_height="172dp"/>

    <TextView
        android:id="@+id/tv_item_donate_title"
        android:textSize="@dimen/text_size_14sp"
        android:textColor="@color/colorBtn"
        android:text="2017净水活动"
        android:layout_marginLeft="@dimen/margin_15dp"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:textSize="@dimen/text_size_12sp"
        android:textColor="@color/colorHint"
        android:text="湖南慈善机构将于近期为你们统一捐出这部分捐款。"
        android:layout_marginLeft="@dimen/margin_15dp"
        android:layout_marginTop="10dp"
        android:id="@+id/tv_item_donate_des"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tv_item_donate_state"
        android:textSize="@dimen/text_size_12sp"
        android:textColor="@color/colorTheme"
        android:text="等待捐赠"
        android:layout_marginLeft="@dimen/margin_15dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    
</LinearLayout>