<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:id="@+id/ll_fragment_hot"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/colorWhite"
              android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_publisher_info"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/margin_15dp"
        android:layout_marginTop="14dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_publisher_avatar"
            android:layout_width="46dp"
            android:layout_height="46dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/logo"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/margin_15dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_publisher_name"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="张建"
                    android:textColor="@color/colorBtn"
                    android:textSize="@dimen/text_size_14sp"/>

                <ImageView
                    android:clickable="true"
                    android:id="@+id/iv_item_hot_vote"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@mipmap/icon_btn_vote_default"/>

                <TextView
                    android:clickable="true"
                    android:id="@+id/tv_item_hot_vote"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/margin_15dp"
                    android:layout_marginRight="15dp"
                    android:gravity="center_vertical"
                    android:text="33"
                    android:textColor="#979797"
                    android:textSize="@dimen/text_size_16sp"/>
            </LinearLayout>


            <TextView
                android:id="@+id/tv_publisher_time"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:text="15分钟前"
                android:textColor="@color/colorHint"
                android:textSize="@dimen/text_size_12sp"/>
        </LinearLayout>


    </LinearLayout>

    <TextView
        android:id="@+id/tv_des"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_15dp"
        android:layout_marginRight="@dimen/margin_15dp"
        android:layout_marginTop="8dp"
        android:lineSpacingExtra="3dp"
        android:text="今天玩的很开心.#善数者正式发布#祝善数者越来越好."
        android:textSize="@dimen/text_size_14sp"/>

    <com.jaeger.ninegridimageview.NineGridImageView
        android:id="@+id/nine_grid_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_15dp"
        app:imgGap="4dp"
        app:maxSize="9"
        app:showStyle="grid"
        app:singleImgSize="300dp"/>


    <!--挑战和故事布局,故事比挑战多一个imageview-->
    <!--<ImageView
        android:id="@+id/iv_story"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_15dp"
        android:layout_marginRight="@dimen/margin_15dp"
        android:layout_marginTop="6dp"
        android:adjustViewBounds="true"
        android:clickable="true"
        android:maxHeight="300dp"
        android:maxWidth="300dp"
        android:src="@drawable/photo"/>-->

    <LinearLayout
        android:id="@+id/ll_challenge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:background="#fafafa"
        android:clickable="true"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_icon"
            android:layout_width="68dp"
            android:layout_height="68dp"
            android:layout_margin="10dp"
            android:padding="10dp"
            android:src="@mipmap/popular_image_challenge_default"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="22dp"
            android:layout_marginTop="4dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="24dp"
                android:layout_marginTop="3dp"
                android:gravity="bottom"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_challenge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lines="1"
                    android:text="寻找神秘地点"
                    android:textColor="@color/colorBtn"
                    android:textSize="16sp"/>

                <TextView
                    android:id="@+id/tv_time_addr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:lines="1"
                    android:text="5月20日,深圳市"
                    android:textColor="@color/colorHint"
                    android:textSize="@dimen/text_size_14sp"/>

            </LinearLayout>

            <TextView
                android:id="@+id/tv_challenge_des"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:lineSpacingExtra="3dp"
                android:lines="2"
                android:text="假期放松一下,率先找到神秘地点打卡者获胜。"
                android:textColor="@color/colorBtn"
                android:textSize="@dimen/text_size_14sp"/>

            <TextView
                android:id="@+id/tv_challenge_call"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:lines="1"
                android:text="一起来试试吧"
                android:textColor="@color/colorBtn"/>

        </LinearLayout>

    </LinearLayout>
    <!--评论布局-->
    <LinearLayout
        android:id="@+id/ll_comments"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/margin_15dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_like"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:clickable="true"
            android:src="@mipmap/icon_btn_like_default"/>

        <TextView
            android:id="@+id/tv_like"
            android:layout_width="48dp"
            android:layout_height="match_parent"
            android:clickable="true"
            android:gravity="center_vertical"
            android:paddingLeft="8dp"
            android:text="30"/>

        <ImageView
            android:id="@+id/iv_comments"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:clickable="true"
            android:src="@mipmap/icon_btn_comment_default"/>

        <TextView
            android:id="@+id/tv_comments"
            android:layout_width="48dp"
            android:layout_height="match_parent"
            android:clickable="true"
            android:gravity="center_vertical"
            android:paddingLeft="8dp"
            android:text="12"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

        <ImageView
            android:id="@+id/iv_more"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="20dp"
            android:clickable="true"
            android:gravity="center"
            android:src="@mipmap/icon_btn_more_default"/>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@color/colorListDivider"/>


</LinearLayout>