<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_bind_result"
    android:background="@color/colorWhite"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.shanchain.shandata.widgets.toolBar.ArthurToolBar
        android:id="@+id/toolbar_bind_result"
        android:layout_height="42dp"
        android:layout_width="match_parent"
        android:background="@color/colorWhite"
        app:titleText="绑定微信"
        app:titleColor="@color/colorBtn"
        app:leftImage="@mipmap/nav_btn_back_selected"
        app:rightImage="@mipmap/icon_btn_more_default"
        app:titleTextSize="16"/>

    <TextView
        style="@style/style_text_line_match"/>

    <ImageView
        android:id="@+id/iv_bind_result_icon"
        android:src="@mipmap/bing_link_wechat_default"
        android:layout_marginTop="58dp"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tv_bind_result_type"
        android:textColor="@color/colorBtn"
        android:textSize="18sp"
        android:layout_marginTop="42dp"
        android:text="微信"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tv_bind_result_des"
        android:textColor="@color/colorHint"
        android:textSize="@dimen/text_size_14sp"
        android:text="已成功绑定，您可以通过微信账号登录善数者"
        android:layout_marginTop="48dp"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/btn_bind_result_reset"
        android:text="重置密码"
        android:textSize="@dimen/text_size_14sp"
        android:textColor="@color/colorWhite"
        android:layout_marginLeft="@dimen/margin_15dp"
        android:layout_marginRight="@dimen/margin_15dp"
        android:background="@drawable/shape_btn_login"
        android:layout_marginTop="38dp"
        android:layout_width="match_parent"
        android:layout_height="38dp"/>
</LinearLayout>
