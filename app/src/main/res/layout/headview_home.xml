<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <com.youth.banner.Banner
        android:id="@+id/vp_head_home"
        android:layout_width="match_parent"
        android:layout_height="182dp"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_marginTop="18dp"
        android:orientation="horizontal">

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tv_head_home_challenge"
                android:layout_width="115dp"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:layout_marginRight="52dp"
                android:background="@mipmap/home_icon_roundedrectangle_default"
                android:gravity="center"
                android:text="挑战 高山"/>

        </FrameLayout>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tv_head_home_story"
                android:layout_width="115dp"
                android:layout_height="match_parent"
                android:layout_gravity="left"
                android:layout_marginLeft="52dp"
                android:background="@mipmap/home_icon_roundedrectangle_default"
                android:gravity="center"
                android:text="故事 大海"/>
        </FrameLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="52dp">

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:layout_gravity="right"
                android:background="@mipmap/home_def_left_default"/>

        </FrameLayout>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:layout_gravity="left"
                android:background="@mipmap/home_def_right_default"/>
        </FrameLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ll_item_home_icon"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center_horizontal"
            android:orientation="vertical">


            <TextView
                android:layout_width="1dp"
                android:layout_height="6dp"
                android:layout_marginBottom="-1dp"
                android:background="#3bbac8"/>

            <TextView
                android:text="今"
                android:id="@+id/tv_head_home_icon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@mipmap/home_icon_round_default"
                android:gravity="center"
                android:textColor="#45becb"
                android:textSize="18sp"/>


            <TextView
                android:layout_width="1dp"
                android:layout_height="6dp"
                android:layout_marginTop="-1dp"
                android:background="#3bbac8"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_toLeftOf="@id/ll_item_home_icon"
            android:gravity="right"
            android:orientation="vertical"
            android:paddingRight="10dp">

            <TextView
                android:id="@+id/tv_head_home_left1"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="深圳市步数前45%"
                android:textColor="@color/colorBtn"
                android:textSize="@dimen/text_size_12sp"/>

            <TextView
                android:id="@+id/tv_head_home_left2"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginBottom="5dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="1个挑战进行中"
                android:textColor="@color/colorBtn"
                android:textSize="@dimen/text_size_12sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_toRightOf="@id/ll_item_home_icon"
            android:gravity="left"
            android:orientation="vertical"
            android:paddingLeft="10dp">

            <TextView
                android:id="@+id/tv_head_home_right1"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="14523步 35善券"
                android:textColor="@color/colorBtn"
                android:textSize="@dimen/text_size_12sp"/>

            <TextView
                android:id="@+id/tv_head_home_right2"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginBottom="5dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="1个故事进行中"
                android:textColor="@color/colorBtn"
                android:textSize="@dimen/text_size_12sp"/>
        </LinearLayout>

    </RelativeLayout>

</LinearLayout>