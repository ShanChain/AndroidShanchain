<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_headview_home"
        android:layout_width="match_parent"
        android:layout_height="182dp"></android.support.v4.view.ViewPager>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_marginTop="18dp"
        android:orientation="horizontal">

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <TextView
                android:layout_width="115dp"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:layout_marginRight="52dp"
                android:background="@mipmap/home_icon_roundedrectangle_default"
                android:gravity="center"
                android:text="挑战  高山"/>

        </FrameLayout>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <TextView
                android:layout_width="115dp"
                android:layout_height="match_parent"
                android:layout_gravity="left"
                android:layout_marginLeft="52dp"
                android:background="@mipmap/home_icon_roundedrectangle_default"
                android:gravity="center"
                android:text="故事  大海"/>
        </FrameLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="52dp">

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:layout_gravity="right"
                android:background="@mipmap/home_def_left_default"/>

        </FrameLayout>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:layout_gravity="left"
                android:background="@mipmap/home_def_right_default"/>
        </FrameLayout>

    </LinearLayout>


</LinearLayout>