<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_walking_more"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:orientation="vertical">

    <com.shanchain.shandata.widgets.toolBar.ArthurToolBar
        android:id="@+id/toolbar_walking_more"
        style="@style/style_toolbar_color_white"
        android:background="@color/colorWhite"
        app:leftImage="@mipmap/nav_btn_return_default"
        app:titleColor="@color/colorBtn"
        app:titleText="多走走"
        app:titleTextSize="16"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorAddFriendDivider"/>

    <ScrollView
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/margin_15dp"
                    android:src="@mipmap/challenge_icon_walkmore_default"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingBottom="10dp"
                    android:paddingLeft="25dp"
                    android:paddingTop="10dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="多走走"
                        android:textColor="@color/colorBtn"
                        android:textSize="@dimen/text_size_14sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_marginTop="4dp"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="找个好天气，看谁走的步数多！"
                        android:textColor="@color/colorHint"
                        android:textSize="@dimen/text_size_12sp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_marginTop="7dp"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_walking_more_counts"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:text="你参加过3次"
                            android:textColor="@color/colorHint"
                            android:textSize="@dimen/text_size_12sp"/>

                        <TextView
                            android:id="@+id/tv_walking_more_rules"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginRight="@dimen/margin_15dp"
                            android:gravity="center_vertical"
                            android:text="详细规则"
                            android:textColor="@color/colorActive"
                            android:textSize="@dimen/text_size_12sp"/>
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="28dp"
                android:background="@color/colorListDivider"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/margin_15dp"
                android:text="正在进行"
                android:textColor="@color/colorBtn"
                android:textSize="@dimen/text_size_14sp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="43:43:37"
                    android:textColor="@color/colorBtn"
                    android:textSize="28sp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="擂主"
                        android:textColor="@color/colorBtn"
                        android:textSize="18sp"/>

                    <TextView
                        android:id="@+id/tv_walking_champion_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="9dp"
                        android:text="6442"
                        android:textColor="@color/colorBtn"
                        android:textSize="28sp"/>

                    <TextView
                        android:id="@+id/tv_walkinge_mine_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="9dp"
                        android:text="8362"
                        android:textColor="@color/colorActive"
                        android:textSize="28sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="9dp"
                        android:text="我"
                        android:textColor="@color/colorActive"
                        android:textSize="18sp"/>

                </LinearLayout>

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="28dp"
                android:background="@color/colorListDivider"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/margin_15dp"
                android:text="挑战介绍"
                android:textColor="@color/colorBtn"
                android:textSize="@dimen/text_size_14sp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_15dp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/iv_walking_challenge_img"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@mipmap/challenge_icon_walkmore_default"/>

                    <TextView
                        android:id="@+id/tv_walking_challenge_champion_name1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="7dp"
                        android:text="龙宏毅"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="40dp"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_walking_challenge_champion_name2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="擂主：龙宏毅"
                        android:textColor="@color/colorBtn"
                        android:textSize="@dimen/text_size_12sp"/>

                    <TextView
                        android:id="@+id/tv_walking_challenge_time"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="时间：5月29日12:00-5月31日14:30"
                        android:textColor="@color/colorBtn"
                        android:textSize="@dimen/text_size_12sp"/>

                    <TextView
                        android:id="@+id/tv_walking_challenge_info"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="共需2人参与，现有1人参与"
                        android:textColor="@color/colorBtn"
                        android:textSize="@dimen/text_size_12sp"/>

                </LinearLayout>


            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="28dp"
                android:background="@color/colorListDivider"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/margin_15dp"
                android:text="退出挑战"
                android:textColor="@color/colorBtn"
                android:textSize="@dimen/text_size_14sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="36dp"
                android:layout_marginTop="10dp"
                android:text="我的信心"
                android:textColor="@color/colorHint"
                android:textSize="@dimen/text_size_14sp"/>

            <com.shanchain.shandata.widgets.other.CustomSeekBar
                android:id="@+id/csb_walking"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="22dp"
                android:layout_marginRight="28dp"
                android:layout_marginTop="10dp"/>

            <TextView
                android:id="@+id/tv_walking_pay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="36dp"
                android:text="可能付出善圆1~3，善券30~120"
                android:textColor="@color/colorHint"
                android:textSize="@dimen/text_size_12sp"/>

            <Button
                android:id="@+id/btn_walking_quit"
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:layout_marginLeft="@dimen/margin_15dp"
                android:layout_marginRight="@dimen/margin_15dp"
                android:layout_marginTop="24dp"
                android:background="@drawable/shap_btn_login"
                android:text="退出挑战"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/text_size_14sp"/>

            <TextView
                android:background="@color/colorWhite"
                android:layout_width="match_parent"
                android:layout_height="40dp"/>

        </LinearLayout>

    </ScrollView>

</LinearLayout>
