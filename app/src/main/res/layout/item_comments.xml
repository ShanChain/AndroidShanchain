<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_marginTop="@dimen/margin_15dp"
            android:layout_marginLeft="@dimen/margin_15dp"
            android:layout_marginRight="@dimen/margin_15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/iv_comments_avatar"
                android:src="@mipmap/popular_image_story_default"
                android:layout_width="30dp"
                android:layout_height="30dp"/>
            <TextView
                android:id="@+id/tv_comments_name"
                android:textColor="#3ab9c7"
                android:text="高晓华"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/iv_comments_avatar"
                android:textSize="@dimen/text_size_14sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <ImageView

                android:layout_marginTop="3dp"
                android:layout_alignParentRight="true"
                android:id="@+id/iv_comments_like"
                android:src="@mipmap/text_btn_thumbsup_default"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_marginTop="1dp"
                android:id="@+id/tv_comments_counts"
                android:textColor="@color/colorHint"
                android:textSize="@dimen/text_size_12sp"
                android:layout_marginRight="5dp"
                android:text="22"
                android:layout_toLeftOf="@id/iv_comments_like"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_marginTop="1dp"
                android:textColor="@color/colorHint"
                android:textSize="@dimen/text_size_12sp"
                android:text="20分钟前"
                android:layout_marginLeft="150dp"
                android:layout_toRightOf="@id/tv_comments_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:textColor="@color/colorHint"
                android:text="深圳"
                android:textSize="@dimen/text_size_12sp"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/iv_comments_avatar"
                android:layout_below="@id/tv_comments_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
    <TextView
        android:textColor="@color/colorBtn"
        android:text="还是卡好点的哦啊湖大不舒,服了娃哈哈短裤给娃  大红大好的我但我电话"
        android:lineSpacingExtra="1.6dp"
        android:layout_marginRight="28dp"
        android:textSize="@dimen/text_size_14sp"
        android:id="@+id/tv_comments_content"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="55dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_marginTop="12dp"
        android:background="@color/colorListDivider"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
</LinearLayout>