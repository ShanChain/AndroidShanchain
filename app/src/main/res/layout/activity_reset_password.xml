<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_reset_password"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:orientation="vertical">

    <com.shanchain.shandata.widgets.toolBar.ArthurToolBar
        android:id="@+id/toolbar_reset_password"
        style="@style/style_toolbar_color_white"
        android:background="@color/colorWhite"
        app:leftImage="@mipmap/nav_btn_return_default"
        app:titleColor="@color/colorBtn"
        app:titleText="重置密码"
        app:titleTextSize="16"/>

    <TextView
        style="@style/style_text_line_match"/>

    <LinearLayout
        style="@style/style_obtain_focus"></LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_marginTop="35dp"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="64dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:padding="10dp"
            android:text="账号"
            android:textColor="@color/colorBtn"
            android:textSize="@dimen/text_size_14sp"/>

        <EditText
            android:textColor="@color/colorBtn"
            android:id="@+id/et_reset_pwd_account"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="@null"
            android:hint="请输入手机号码"
            android:lines="1"
            android:maxLength="20"
            android:padding="10dp"
            android:textColorHint="@color/colorHint"
            android:textSize="@dimen/text_size_14sp"/>
    </LinearLayout>

    <TextView
        style="@style/style_text_line"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tv_reset_pwd_type"
            android:layout_width="64dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:padding="10dp"
            android:text="新密码"
            android:textColor="@color/colorBtn"
            android:textSize="@dimen/text_size_14sp"/>

        <EditText
            android:textColor="@color/colorBtn"
            android:inputType="textPassword"
            android:id="@+id/et_reset_pwd_new_pwd"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="@null"
            android:hint="请输入新密码"
            android:lines="1"
            android:maxLength="20"
            android:padding="10dp"
            android:textColorHint="@color/colorHint"
            android:textSize="@dimen/text_size_14sp"/>
    </LinearLayout>

    <TextView
        style="@style/style_text_line"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="64dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:padding="10dp"
            android:text="验证码"
            android:textColor="@color/colorBtn"
            android:textSize="@dimen/text_size_14sp"/>

        <EditText
            android:textColor="@color/colorBtn"
            android:id="@+id/et_reset_pwd_checkcode"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="@null"
            android:hint="请输入验证码"
            android:lines="1"
            android:padding="10dp"
            android:textColorHint="@color/colorHint"
            android:textSize="@dimen/text_size_14sp"/>

        <Button
            android:id="@+id/btn_reset_pwd_checkcode"
            android:layout_width="100dp"
            android:layout_height="28dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/shape_btn_login"
            android:text="获取验证码"
            android:textColor="@color/colorWhite"
            android:textSize="12sp"/>

    </LinearLayout>

    <TextView
        style="@style/style_text_line"/>


    <Button
        android:id="@+id/btn_reset_pwd_sure"
        style="@style/style_btn_common"
        android:layout_marginTop="35dp"
        android:background="@drawable/shape_btn_login"
        android:text="确定"
        android:textColor="@color/colorWhite"/>


</LinearLayout>
