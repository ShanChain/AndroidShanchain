<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_walk_more"
    android:orientation="vertical"
    android:background="@color/colorWhite"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.shanchain.widgets.toolBar.ArthurToolBar
        android:id="@+id/toolbar_walk_more"
        style="@style/style_toolbar_color_white"
        android:background="@color/colorWhite"
        app:leftImage="@mipmap/nav_btn_return_default"
        app:rightImage="@mipmap/search_button_search_default"
        app:titleColor="@color/colorBtn"
        app:titleText="多走走"
        app:titleTextSize="16"/>

    <TextView
        android:background="@color/colorAddFriendDivider"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <com.jcodecraeer.xrecyclerview.XRecyclerView
        android:id="@+id/xrv_walk_more"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </com.jcodecraeer.xrecyclerview.XRecyclerView>

</LinearLayout>
