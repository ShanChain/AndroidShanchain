<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/colorWhite"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="136dp">

        <LinearLayout
            android:layout_width="68dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/margin_15dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_header_personal_avatar"
                android:layout_width="match_parent"
                android:layout_height="68dp"
                android:layout_marginTop="28dp"
                android:scaleType="centerCrop"
                android:src="@drawable/photo6"/>

            <TextView
                android:id="@+id/tv_header_personal_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center_horizontal"
                android:text="李江宇"
                android:textColor="#979797"
                android:textSize="15sp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="22dp"
                android:layout_marginTop="56dp"
                android:gravity="center">

                <TextView
                    android:id="@+id/tv_header_personal_focus"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="关注   20"
                    android:textColor="#000"
                    android:textSize="15sp"/>

                <TextView
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="18dp"
                    android:layout_marginRight="18dp"
                    android:background="@color/colorBtn"/>

                <TextView
                    android:id="@+id/tv_header_personal_fans"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="粉丝  37"
                    android:textColor="#000"
                    android:textSize="15sp"/>
            </LinearLayout>

            <Button
                android:id="@+id/btn_header_personal_focus"
                android:layout_width="144dp"
                android:layout_height="28dp"
                android:layout_marginTop="@dimen/margin_15dp"
                android:background="@drawable/shap_btn_regist"
                android:clickable="true"
                android:text="关注"
                android:textColor="#979797"
                android:textSize="15sp"/>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@color/colorListDivider"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="184dp"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/rl_header_personal_story"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:background="?android:attr/selectableItemBackground"
            android:clickable="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/margin_15dp"
                android:text="故事"
                android:textColor="@color/colorBtn"
                android:textSize="15sp"/>

            <ImageView
                android:id="@+id/iv_header_personal_story"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/margin_15dp"
                android:src="@mipmap/icon_btn_back_default"/>
        </RelativeLayout>

        <android.support.v7.widget.RecyclerView
            android:layout_marginLeft="@dimen/margin_15dp"
            android:id="@+id/xrv_images_story"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="8dp">

        </android.support.v7.widget.RecyclerView>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@color/colorListDivider"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="112dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/margin_15dp"
            android:text="数据"
            android:textColor="@color/colorBtn"
            android:textSize="@dimen/text_size_14sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/margin_15dp"
            android:paddingRight="15dp">

            <LinearLayout
                android:id="@+id/ll_header_personal_shanyuan"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:orientation="vertical"
                android:paddingBottom="10dp"
                android:paddingTop="10dp">

                <TextView
                    android:id="@+id/tv_personal_shanyuan"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="4.1k"
                    android:textColor="@color/colorTheme"
                    android:textSize="@dimen/text_size_14sp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="善圆"
                    android:textColor="@color/colorBtn"
                    android:textSize="@dimen/text_size_14sp"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_header_personal_shanquan"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:orientation="vertical"
                android:paddingBottom="10dp"
                android:paddingTop="10dp">

                <TextView
                    android:id="@+id/tv_personal_shanquan"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="45"
                    android:textColor="@color/colorTheme"
                    android:textSize="@dimen/text_size_14sp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="善券"
                    android:textColor="@color/colorBtn"
                    android:textSize="@dimen/text_size_14sp"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_header_personal_story"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:orientation="vertical"
                android:paddingBottom="10dp"
                android:paddingTop="10dp">

                <TextView
                    android:id="@+id/tv_personal_story"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="9"
                    android:textColor="@color/colorTheme"
                    android:textSize="@dimen/text_size_14sp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="故事"
                    android:textColor="@color/colorBtn"
                    android:textSize="@dimen/text_size_14sp"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_header_personal_challenge"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:orientation="vertical"
                android:paddingBottom="10dp"
                android:paddingTop="10dp">

                <TextView
                    android:id="@+id/tv_personal_challenge"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="254"
                    android:textColor="@color/colorTheme"
                    android:textSize="@dimen/text_size_14sp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="挑战"
                    android:textColor="@color/colorBtn"
                    android:textSize="@dimen/text_size_14sp"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@color/colorListDivider"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/margin_15dp"
        android:text="动态"
        android:textColor="@color/colorBtn"
        android:textSize="@dimen/text_size_16sp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorListDivider"/>
</LinearLayout>