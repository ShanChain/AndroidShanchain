<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_walk_more_result"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:orientation="vertical">

    <com.shanchain.shandata.widgets.toolBar.ArthurToolBar
        android:id="@+id/toolbar_walk_more_result"
        style="@style/style_toolbar_color_white"
        android:background="@color/colorWhite"
        app:leftImage="@mipmap/nav_btn_return_default"
        app:rightText="确定"
        app:rightTextColor="@color/colorBtn"
        app:rightTextSize="14"
        app:titleColor="@color/colorBtn"
        app:titleText="多走走"
        app:titleTextSize="16"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorAddFriendDivider"/>

    <LinearLayout
        style="@style/style_obtain_focus"></LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="25dp">

        <ImageView
            android:id="@+id/iv_walk_result_icon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginLeft="28dp"
            android:src="@mipmap/home_icon_walkmore_default"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="48dp"
            android:layout_marginTop="3dp"
            android:text="专注"
            android:textColor="@color/colorBtn"
            android:textSize="@dimen/text_size_12sp"/>

        <TextView
            android:id="@+id/tv_walk_result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="2dp"
            android:text="挑战失败！"
            android:textColor="@color/colorBtn"
            android:textSize="@dimen/text_size_14sp"/>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="58dp">

        <ImageView
            android:id="@+id/iv_walk_result_img_mine"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginLeft="68dp"
            android:src="@mipmap/home_icon_happy_default"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@id/iv_walk_result_img_mine"
            android:text="我"
            android:textColor="@color/colorBtn"
            android:textSize="@dimen/text_size_12sp"/>

        <TextView
            android:id="@+id/tv_walk_result_confidence_mine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="82dp"
            android:layout_toRightOf="@id/iv_walk_result_img_mine"
            android:text="信心70%"
            android:textColor="@color/colorBtn"
            android:textSize="@dimen/text_size_12sp"/>

        <TextView
            android:id="@+id/tv_walk_result_shanquan_mine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="36dp"
            android:text="善券 +50"
            android:textColor="@color/colorBtn"
            android:textSize="@dimen/text_size_12sp"/>

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="20dp">

        <ImageView
            android:id="@+id/iv_walk_result_img_rival"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginLeft="68dp"
            android:src="@mipmap/home_icon_happy_default"/>

        <TextView
            android:id="@+id/tv_walk_result_name_rival"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@id/iv_walk_result_img_rival"
            android:text="我"
            android:textColor="@color/colorBtn"
            android:textSize="@dimen/text_size_12sp"/>

        <TextView
            android:id="@+id/tv_walk_result_confidence_rival"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="82dp"
            android:layout_toRightOf="@id/iv_walk_result_img_rival"
            android:text="信心70%"
            android:textColor="@color/colorBtn"
            android:textSize="@dimen/text_size_12sp"/>

        <TextView
            android:id="@+id/tv_walk_result_shanquan_rival"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="36dp"
            android:text="善券 +50"
            android:textColor="@color/colorBtn"
            android:textSize="@dimen/text_size_12sp"/>

    </RelativeLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorListDivider"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="12dp">

        <ImageView
            android:id="@+id/iv_walk_result_feeling"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="12dp"
            android:src="@mipmap/challengesuccess_icon_recording_default"/>

        <EditText
            android:id="@+id/et_walk_result_feeling"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:hint="记下本次挑战的感想吧"
            android:maxLines="5"
            android:textColor="@color/colorBtn"
            android:textColorHint="#b9b9b9"
            android:textSize="@dimen/text_size_14sp"/>
    </LinearLayout>

</LinearLayout>
