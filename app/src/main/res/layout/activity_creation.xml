<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_creation"
    android:background="@color/colorWhite"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.shanchain.shandata.widgets.toolBar.ArthurToolBar
        android:id="@+id/toolbar_creation"
        style="@style/style_toolbar_color_white"
        android:background="@color/colorWhite"
        app:leftImage="@mipmap/nav_btn_return_default"
        app:rightText="下一步"
        app:rightTextColor="@color/colorBtn"
        app:titleColor="@color/colorBtn"
        app:titleText="创世"
        app:titleTextSize="16"/>

        <LinearLayout
            style="@style/style_obtain_focus"/>

    <RelativeLayout
        android:id="@+id/rl_creation"
        android:background="@drawable/story_creation_bg"
        android:layout_below="@id/toolbar_creation"
        android:layout_width="match_parent"
        android:layout_height="326dp">

        <ImageView
            android:padding="10dp"
            android:id="@+id/iv_creation_refresh"
            android:src="@mipmap/creation_btn_refresh_default"
            android:layout_alignParentRight="true"
            android:layout_marginTop="9dp"
            android:layout_marginRight="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


        <TextView
            style="@style/style_text_creation"
            android:id="@+id/tv_creation_tag1"
            android:text="理想"
            android:layout_marginTop="28dp"
            android:layout_marginLeft="28dp"/>

        <TextView
            style="@style/style_text_creation"
            android:id="@+id/tv_creation_tag2"
            android:text="娱乐"
            android:layout_marginTop="42dp"
            android:layout_marginLeft="125dp"/>

        <TextView
            android:layout_alignParentRight="true"
            android:id="@+id/tv_creation_tag3"
            android:text="人生"
            android:layout_marginTop="53dp"
            android:layout_marginRight="60dp"
            style="@style/style_text_creation"/>

        <TextView
            style="@style/style_text_creation"
            android:id="@+id/tv_creation_tag4"
            android:text="技术管理"
            android:layout_marginTop="132dp"
            android:layout_marginLeft="46dp"/>

        <TextView
            style="@style/style_text_creation"
            android:id="@+id/tv_creation_tag5"
            android:text="时间管理"
            android:layout_marginTop="120dp"
            android:layout_marginLeft="154dp"/>

        <TextView
            android:layout_alignParentRight="true"
            android:id="@+id/tv_creation_tag6"
            android:text="健康"
            android:layout_marginTop="114dp"
            android:layout_marginRight="10dp"
            style="@style/style_text_creation"/>

        <TextView
            android:id="@+id/tv_creation_tag7"
            android:text="大海"
            android:layout_marginTop="204dp"
            android:layout_marginLeft="107dp"
            style="@style/style_text_creation"/>


        <TextView
            android:visibility="gone"
            android:id="@+id/tv_creation_tag8"
            android:text="添加1"
            android:layout_marginTop="185dp"
            android:layout_marginLeft="230dp"
            style="@style/style_text_creation"
            android:textColor="@color/colorCreationText"/>

        <TextView
            android:visibility="gone"
            android:id="@+id/tv_creation_tag9"
            android:text="添加2"
            android:layout_marginTop="210dp"
            android:layout_marginLeft="15dp"
            style="@style/style_text_creation"
            android:textColor="@color/colorCreationText"/>

        <EditText
            android:lines="1"
            android:maxLength="4"
            android:id="@+id/et_creation_tag"
            android:textSize="@dimen/text_size_12sp"
            android:paddingLeft="10dp"
            android:hint="自定义"
            android:textColorHint="@color/colorHint"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="46dp"
            android:layout_marginBottom="12dp"
            android:background="@drawable/shape_edit_search"
            android:layout_width="86dp"
            android:layout_height="28dp"/>

        <ImageView
            android:padding="10dp"
            android:id="@+id/iv_creation_add"
            android:src="@mipmap/creation_btn_addto_default"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="7dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </RelativeLayout>
    
    
    <ImageView
        android:scaleType="centerCrop"
        android:id="@+id/iv_creation_title"
        android:layout_marginLeft="38dp"
        android:layout_marginTop="-38dp"
        android:layout_below="@id/rl_creation"
        android:layout_width="76dp"
        android:layout_height="76dp"/>


    <EditText
        android:id="@+id/et_creation_story_name"
        android:layout_below="@id/rl_creation"
        android:layout_marginTop="25dp"
        android:lines="1"
        android:maxLength="6"
        android:textSize="@dimen/text_size_12sp"
        android:paddingLeft="10dp"
        android:hint="故事名称"
        android:textColorHint="@color/colorHint"
        android:layout_alignParentRight="true"
        android:layout_marginRight="77dp"
        android:layout_marginBottom="25dp"
        android:background="@drawable/shape_btn_regist_hint"
        android:layout_width="96dp"
        android:layout_height="28dp"/>

    <EditText
        android:paddingRight="@dimen/margin_15dp"
        android:paddingBottom="8dp"
        android:id="@+id/et_creation_story_introduce"
        android:textSize="@dimen/text_size_12sp"
        android:textColor="@color/colorBtn"
        android:hint="故事的简要介绍"
        android:gravity="top"
        android:paddingLeft="@dimen/margin_15dp"
        android:paddingTop="8dp"
        android:textColorHint="@color/colorHint"
        android:background="@drawable/shape_bg_edit_creation"
        android:layout_marginLeft="@dimen/margin_15dp"
        android:layout_marginRight="@dimen/margin_15dp"
        android:layout_marginBottom="28dp"
        android:layout_below="@id/et_creation_story_name"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</RelativeLayout>
