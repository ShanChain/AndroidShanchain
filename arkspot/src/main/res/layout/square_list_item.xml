<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:padding="5dp">
        <cn.jiguang.imui.view.CircleImageView
            android:id="@+id/iv_user_head"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:paddingTop="@dimen/nav_header_vertical_spacing"
            android:src="@drawable/aurora_headicon_default" />
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:gravity="center|left"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_nickname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"/>

            </LinearLayout>
        </LinearLayout>
        <TextView
            android:id="@+id/tv_attention"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="50dp"
            android:layout_gravity="center"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:paddingLeft="10dp"
            android:paddingRight="5dp"
            android:gravity="center"
            android:textSize="14sp"
            android:textColor="@color/login_marjar_color"
            android:text=""
            android:background="@drawable/squra_attention_n_shape"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="5dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        >
        <com.shanchain.shandata.widgets.ExpandableTextView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/et_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:etv_MaxLinesOnShrink="4"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            />
        <com.shanchain.shandata.widgets.CustomGridView
            android:id="@+id/gv_photo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:horizontalSpacing="5dp"
            android:verticalSpacing="5dp"
            android:numColumns="3"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/im_zan"
                android:layout_width="@dimen/dimens_15dp"
                android:layout_height="@dimen/dimens_15dp"
                android:layout_marginLeft="50dp"
                android:layout_gravity="center"
                android:src="@mipmap/dianzan"/>
            <TextView
                android:id="@+id/tv_conin"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center|left"
                android:layout_marginLeft="5dp"/>
            <ImageView
                android:layout_width="@dimen/dimens_15dp"
                android:layout_height="@dimen/dimens_15dp"
                android:src="@mipmap/message_sqeare_icon"/>
            <TextView
                android:id="@+id/tv_message"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:gravity="center|left"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"/>
            <ImageView
                android:layout_width="@dimen/dimens_15dp"
                android:layout_height="@dimen/dimens_15dp"
                android:layout_gravity="center"
                android:src="@mipmap/squre_share_icon"/>
            <TextView
                android:id="@+id/tv_share"
                android:layout_width="40dp"
                android:gravity="center|left"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:textSize="14sp"
                android:layout_marginLeft="5dp"/>
            <Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/tv_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/delte"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:textColor="@color/text_color_n"
                android:gravity="center"
                android:textSize="14sp"/>
        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="0.6dp"
        android:background="@color/colorBtnBg"/>
</LinearLayout>