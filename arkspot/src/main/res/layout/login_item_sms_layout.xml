<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <!-- 获取验证码 -->
    <RelativeLayout
        android:id="@+id/rl_enter_phone"
        android:layout_width="match_parent"
        android:layout_height="270dp"
        android:focusable="true"
        android:visibility="visible"
        android:focusableInTouchMode="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/login_psw_item_shape"
            android:layout_marginTop="60dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:paddingLeft="25dp"
            android:paddingRight="25dp"
            android:paddingBottom="60dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="60dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:orientation="horizontal"
                    android:gravity="center"
                    >
                <TextView
                    android:id="@+id/tv_phone_q_2"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/login_marjar_color"
                    android:text="+86"
                    android:gravity="center"
                    android:textSize="15sp"/>
                <View
                    android:layout_width="0.7dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:layout_marginRight="8dp"
                    android:background="@color/login_marjar_color"/>
                <EditText
                    android:id="@+id/et_dynamic_login_account"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:hint="@string/str_login_account"
                    android:textColor="@color/login_marjar_color"
                    android:background="@null"
                    android:inputType="number"
                    android:textCursorDrawable="@null"
                    android:layout_height="wrap_content" />

                <android.support.design.widget.TextInputLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:visibility="gone"
                    android:theme="@style/CustomAppTheme_textinputLayout"
                    android:layout_height="wrap_content">

                </android.support.design.widget.TextInputLayout>
            </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="5dp"
                    android:background="@color/white_btn_press"/>
            </LinearLayout>
        </LinearLayout>
        <Button
            android:id="@+id/btn_dynamic_login_next"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/login_btn_selector"
            android:text="@string/next_step"
            android:textColor="@color/login_marjar_color"
            />
        <TextView
            android:id="@+id/tv_normal_login"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:text="@string/str_normal_login"
            android:layout_alignParentRight="true"
            android:layout_marginRight="30dp"
            android:layout_marginTop="70dp"
            android:textSize="14sp"
            android:textColor="@color/login_marjar_color"
            android:gravity="center"/>
        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:orientation="vertical"
            android:padding="20dp"
            android:background="@drawable/login_item_marjar_shape"
            android:layout_centerInParent="true"
            android:layout_alignParentTop="true">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@mipmap/marjar_icon"/>
        </LinearLayout>
    </RelativeLayout>

    <!-- 获取验证码下一步 -->
    <RelativeLayout
        android:id="@+id/rl_code_item"
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:visibility="gone">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/login_psw_item_shape"
            android:layout_marginTop="60dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:paddingLeft="25dp"
            android:paddingRight="25dp"
            android:paddingBottom="60dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="60dp"
                android:text="@string/enter_sms_coed_1"
                android:textColor="@color/login_marjar_color"/>
            <TextView
                android:id="@+id/tv_sms_tip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:textColor="@color/white_btn_press"/>
            <LinearLayout
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <EditText
                    android:id="@+id/et_dynamic_login_code"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:hint="@string/str_register_code_input"
                    android:background="@null"
                    android:textColorHint="@color/login_marjar_color"
                    android:textColor="@color/login_marjar_color"
                    android:inputType="number"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/tv_register_code"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/login_marjar_color"
                    android:text="@string/str_register_code_obtain"
                    android:textSize="@dimen/sp_14"
                    />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.8dp"
                android:layout_marginTop="3dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@color/white_btn_press"/>
        </LinearLayout>
        <Button
            android:id="@+id/btn_dynamic_login"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/login_btn_selector"
            android:text="@string/str_login_btn_login"
            android:textColor="@color/login_marjar_color"
            />
        <TextView
            android:id="@+id/tv_normal_login_next"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:text="@string/str_normal_login"
            android:layout_alignParentRight="true"
            android:layout_marginRight="30dp"
            android:layout_marginTop="70dp"
            android:textSize="14sp"
            android:textColor="@color/login_marjar_color"
            android:gravity="center"/>
        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:orientation="vertical"
            android:padding="20dp"
            android:background="@drawable/login_item_marjar_shape"
            android:layout_centerInParent="true"
            android:layout_alignParentTop="true">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@mipmap/marjar_icon"/>
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>