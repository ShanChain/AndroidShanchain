<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/colorTransparent"
              android:orientation="vertical"
              android:paddingBottom="@dimen/dimens_15dp"
              android:paddingTop="@dimen/dimens_15dp">

    <TextView
        android:id="@+id/tv_item_msg_send_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/dimens_15dp"
        android:background="@drawable/shape_bg_msg_time"
        android:gravity="center"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:text="13:35"
        android:textColor="@color/colorWhite"
        android:textSize="10sp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_item_msg_send_avatar"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dimens_15dp"
            android:scaleType="centerCrop"
            android:src="@drawable/photo_yue"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dimens_15dp"
            android:layout_toLeftOf="@id/iv_item_msg_send_avatar">

            <TextView
                android:id="@+id/tv_item_msg_send_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="蛋堡"
                android:textColor="@color/colorTextDefault"
                android:textSize="@dimen/sp_14"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimens_15dp"
            android:layout_marginRight="@dimen/dimens_15dp"
            android:layout_marginTop="25dp"
            android:layout_toLeftOf="@id/iv_item_msg_send_avatar">

            <TextView
                android:id="@+id/tv_item_msg_send_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:background="@drawable/selector_bg_msg_send_theme"
                android:maxWidth="215dp"
                android:paddingBottom="8dp"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:paddingTop="8dp"
                android:text="好好干是门萨蛋堡，没事拿的，但卡的话干啥基督教啊门萨蛋堡断的空间"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/sp_14"/>

            <TextView
                android:id="@+id/tv_item_msg_send_role"
                android:layout_width="44dp"
                android:layout_height="18dp"
                android:layout_marginRight="@dimen/dimens_10dp"
                android:layout_toLeftOf="@id/tv_item_msg_send_content"
                android:background="@drawable/shape_bg_msg_role"
                android:gravity="center"
                android:text="本人说"
                android:textColor="@color/colorWhite"
                android:textSize="10sp"/>

        </RelativeLayout>

    </RelativeLayout>

</LinearLayout>