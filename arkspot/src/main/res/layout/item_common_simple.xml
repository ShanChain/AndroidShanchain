<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/dimens_22dp"
    android:layout_marginTop="@dimen/dimens_22dp"
    android:layout_marginRight="@dimen/dp_10"
    android:layout_marginBottom="@dimen/dimens_20dp">


    <TextView
        android:id="@+id/tv_item_story_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimens_20dp"
        android:layout_marginTop="2dp"
        android:lines="1"
        android:text="必胜客餐厅"
        android:textColor="@color/colorBlack"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/tv_item_receive_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimens_20dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/tv_item_story_name"
        android:lines="1"
        android:text="2019-01-01  23:59"
        android:textColor="@color/colorTextDefault"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/tv_item_coupon_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/dimens_20dp"
        android:lines="1"
        android:text="已领取"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/sp_12" />
</RelativeLayout>