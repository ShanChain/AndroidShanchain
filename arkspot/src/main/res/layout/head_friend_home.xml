<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:background="@color/colorWhite"
              android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="190dp">
        
        <ImageView
            android:id="@+id/iv_friend_home_bg"
            android:scaleType="centerCrop"
            android:src="@drawable/photo_city"
            android:layout_width="match_parent"
            android:layout_height="170dp"/>
        
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_friend_home_head"
            android:src="@drawable/photo_yue"
            android:scaleType="centerCrop"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dimens_20dp"
            app:civ_border_width="2dp"
            app:civ_border_color="@color/colorWhite"
            android:layout_width="70dp"
            android:layout_height="70dp"/>

        <TextView
            android:id="@+id/tv_friend_home_name"
            android:layout_marginTop="95dp"
            android:text="汪淼（No.35）"
            android:textColor="@color/colorWhite"
            android:textSize="18sp"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_friend_home_des"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/sp_12"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="125dp"
            android:text="人类不需要三体，人类不需要ETO!"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <Button
            android:textColor="@color/colorTextDefault"
            android:textSize="14sp"
            android:id="@+id/btn_friend_home_focus"
            android:elevation="20dp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:background="@drawable/shape_btn_focus"
            android:layout_marginBottom="2dp"
            android:text="关注TA"
            android:layout_width="100dp"
            android:layout_height="36dp"/>
        
    </RelativeLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="82dp">

        <TextView
            android:id="@+id/tv_friend_home_drama"
            android:layout_marginTop="6dp"
            android:textSize="12sp"
            android:textColor="@color/colorTextSecondary"
            android:text="@string/str_friend_home_drama"
            android:gravity="center"
            android:layout_weight="1"
            android:drawableTop="@mipmap/abs_friends_btn_drama_default"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>

        <TextView
            android:id="@+id/tv_friend_home_conversation"
            android:layout_marginTop="12dp"
            android:textSize="12sp"
            android:textColor="@color/colorTextSecondary"
            android:text="@string/str_friend_home_conversation"
            android:gravity="center"
            android:layout_weight="1"
            android:drawableTop="@mipmap/abs_friends_btn_dialogue_default"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>

        <TextView
            android:id="@+id/tv_friend_home_long"
            android:layout_marginTop="6dp"
            android:textSize="12sp"
            android:textColor="@color/colorTextSecondary"
            android:text="@string/str_friend_home_longtext"
            android:gravity="center"
            android:layout_weight="1"
            android:drawableTop="@mipmap/abs_friends_btn_longtext_default"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>

    </LinearLayout>
    
</LinearLayout>