<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_marginLeft="42dp"
              android:layout_marginRight="42dp"
              android:background="@drawable/shape_bg_dialog_item"
              android:layout_width="match_parent"
              android:layout_height="180dp">


    <TextView
        android:textSize="17sp"
        android:textColor="#030303"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:layout_marginLeft="28dp"
        android:layout_marginRight="28dp"
        android:text="屏蔽后，将不会再接收对方的动态和消息。"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


    <TextView
        android:text="可在“设置-黑名单管理”中解除"
        android:textSize="13sp"
        android:textColor="#030303"
        android:gravity="center"
        android:layout_marginTop="@dimen/dimens_20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <View
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:layout_height="0dp"/>

    <View
        style="@style/style_text_line_match"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp">

        <TextView
            android:id="@+id/tv_shielding_dialog_cancel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="取消"
            android:textColor="@color/colorDialogBtn"
            android:textSize="17sp"/>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/colorAccent"/>

        <TextView
            android:id="@+id/tv_shielding_dialog_sure"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="确定"
            android:textColor="@color/colorDialogBtn"
            android:textSize="17sp"/>
    </LinearLayout>

</LinearLayout>