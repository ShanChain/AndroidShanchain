<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_bg_even_msg"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingTop="15dp">

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_marginBottom="@dimen/dimens_20dp"
        android:layout_marginTop="@dimen/dimens_22dp"
        android:paddingLeft="@dimen/dimens_15dp"
        android:layout_width="match_parent"
        android:layout_height="40dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_item_story_avatar"
            android:scaleType="centerCrop"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/aurora_headicon_default"/>

        <TextView
            android:lines="1"
            android:id="@+id/tv_item_story_name"
            android:layout_marginTop="2dp"
            android:textColor="@color/colorTextDefault"
            android:text="于伟 发布的："
            android:layout_toRightOf="@id/iv_item_story_avatar"
            android:layout_marginLeft="@dimen/dimens_20dp"
            android:textSize="@dimen/sp_14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:lines="1"
            android:id="@+id/tv_item_story_time"
            android:textSize="@dimen/sp_12"
            android:textColor="@color/colorHint"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@id/iv_item_story_avatar"
            android:layout_marginLeft="@dimen/dimens_20dp"
            android:text="20分钟前"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_item_story_from"
            android:lines="1"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@id/tv_item_story_time"
            android:layout_marginLeft="15dp"
            android:textColor="@color/colorActive"
            android:text=""
            android:textSize="@dimen/sp_12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </RelativeLayout>

    <TextView
        android:id="@+id/even_message_bounty"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dimens_10dp"
        android:padding="@dimen/dimens_5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="赏金：0.0001 SEAT"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/even_message_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="44dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="44dp"
        android:ellipsize="end"
        android:lineSpacingExtra="4dp"
        android:maxLines="5"
        android:text="分享马甲App应用,可获得10 SEAT,非常感谢！！"
        android:textColor="@color/aurora_event_msg_text_color"
        android:textSize="14sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/even_message_last_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:textColor="@color/aurora_event_msg_text_color"
        android:text="完成时限：12:00 2018-10-20"/>

    <Button
        android:id="@+id/btn_event_task"
        android:layout_width="wrap_content"
        android:layout_height="27dp"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="@dimen/dimens_10dp"
        android:background="@drawable/shape_item_btn_join"
        android:text="领取任务"
        android:textColor="@color/colorHomeBtn"
        android:textStyle="bold" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/dp_10"
        android:visibility="gone"
        android:background="@color/color_gray_light_content_text">

    </View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/even_message_comment_num"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_weight="1"
            android:drawableLeft="@mipmap/comment"
            android:gravity="center"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:text="150"
            android:visibility="gone"
            android:textColor="@color/aurora_event_msg_text_color"
            android:textStyle="bold" />


        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@color/color_gray_light_content_text">

        </View>

        <TextView
            android:id="@+id/even_message_like_num"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_weight="1"
            android:drawableLeft="@drawable/like"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:gravity="center"
            android:text="20"
            android:visibility="gone"
            android:textColor="@color/aurora_event_msg_text_color"
            android:textStyle="bold" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="10dp"
        android:visibility="gone"
        android:background="@color/aurora_msg_date_bg_color"></View>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:visibility="gone">

        <TextView
            android:id="@+id/item_tv_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="54dp"
            android:drawableLeft="@drawable/comment"
            android:drawablePadding="10dp"
            android:text="115"
            android:textAlignment="center" />

        <View
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_margin="4dp"
            android:background="@color/aurora_msg_date_bg_color"></View>


        <TextView
            android:id="@+id/item_tv_like"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:layout_marginRight="54dp"
            android:drawableLeft="@drawable/like"
            android:drawablePadding="10dp"
            android:gravity="center"
            android:text="225" />
    </RelativeLayout>

    <cn.jiguang.imui.view.RoundTextView
        android:id="@+id/aurora_tv_msgitem_event"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:gravity="center"
        android:padding="5dp"
        android:text="TextView"
        android:textColor="#000000"
        android:visibility="gone"
        app:backgroundColor="@color/aurora_event_msg_bg_color"
        app:cornerRadius="@dimen/aurora_event_bg_corner_radius" />

</LinearLayout>