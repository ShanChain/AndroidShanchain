<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/login_bg_ic"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.shanchain.data.common.ui.toolBar.ArthurToolBar
        android:id="@+id/tb_reset_pwd"
        style="@style/style_toolbar"
        app:leftImage="@mipmap/abs_roleselection_btn_back_default"
        app:titleColor="@color/colorTextDefault"
        app:titleText="@string/reset_psw"
        app:titleTextSize="16"/>

    <View style="@style/style_text_line_match"/>

    <LinearLayout
        style="@style/style_obtain_focus"/>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:layout_marginTop="30dp"
        android:focusableInTouchMode="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/login_psw_item_shape"
            android:layout_marginTop="60dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:paddingLeft="25dp"
            android:paddingRight="25dp"
            android:paddingBottom="30dp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="60dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:orientation="horizontal"
                    android:gravity="center"
                    >
                    <TextView
                        android:id="@+id/tv_phone_q_1"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:textColor="@color/login_marjar_color"
                        android:text="+86"
                        android:gravity="center"
                        android:textSize="15sp"/>
                    <View
                        android:layout_width="0.7dp"
                        android:layout_height="match_parent"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="8dp"
                        android:layout_marginRight="8dp"
                        android:background="@color/login_marjar_color"/>

                    <EditText
                        android:id="@+id/et_reset_phone"
                        android:layout_width="match_parent"
                        android:hint="@string/str_login_account"
                        android:textColor="@color/login_marjar_color"
                        android:background="@null"
                        android:layout_gravity="center"
                        android:inputType="number"
                        android:textSize="14sp"
                        android:textCursorDrawable="@null"
                        android:layout_height="40dp" />
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="3dp"
                    android:background="@color/white_btn_press"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="10dp"
                android:gravity="center"
                >
                <LinearLayout
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="horizontal">
                    <EditText
                        android:id="@+id/et_reset_code"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:hint="@string/str_register_code_input"
                        android:background="@null"
                        android:lines="2"
                        android:textSize="14sp"
                        android:textColor="@color/login_marjar_color"
                        android:inputType="number"
                        android:layout_height="40dp" />
                    <TextView
                        android:id="@+id/tv_reset_code"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/login_marjar_color"
                        android:text="@string/str_register_code_obtain"
                        android:textSize="@dimen/sp_14"
                        />
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="8dp"
                    android:background="@color/white_btn_press"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="10dp"
                android:gravity="center"
                >
                <LinearLayout
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <EditText
                        android:id="@+id/et_reset_pwd"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:hint="@string/str_reset_pwd"
                        android:digits="@string/input_type_pwd"
                        android:lines="1"
                        android:textSize="14sp"
                        android:inputType="textPassword"
                        android:background="@null"
                        android:textColor="@color/login_marjar_color"
                        android:layout_height="40dp" />
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="8dp"
                    android:background="@color/white_btn_press"/>
            </LinearLayout>

            <Button
                android:id="@+id/btn_reset_sure"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/bg_btn_login_selector"
                android:text="@string/str_sure"
                android:textColor="@color/colorWhite"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:orientation="vertical"
            android:padding="20dp"
            android:background="@drawable/login_item_marjar_shape"
            android:layout_centerInParent="true"
            android:layout_alignParentTop="true">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@mipmap/marjar_icon"/>
        </LinearLayout>
    </RelativeLayout>


</LinearLayout>
