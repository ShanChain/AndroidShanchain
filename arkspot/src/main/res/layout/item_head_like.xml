<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    android:layout_width="60dp"
                                    android:layout_height="60dp"
                                    android:layout_marginRight="@dimen/dimens_5dp"
                                    android:layout_marginLeft="@dimen/dimens_5dp"
                                    xmlns:app="http://schemas.android.com/apk/res-auto"
                                    app:cardCornerRadius="8dp"
                                    android:background="@color/colorWhite">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:src="@drawable/photo_city"
        android:scaleType="centerCrop"
        android:id="@+id/iv_item_head_like"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>



    <FrameLayout
        android:layout_width="match_parent"
        android:background="#5000"
        android:layout_height="match_parent"/>

    <TextView
        android:id="@+id/tv_item_story_like"
        android:textSize="@dimen/dp_10"
        android:layout_alignParentBottom="true"
        android:lines="1"
        android:layout_marginLeft="@dimen/dimens_5dp"
        android:layout_marginBottom="@dimen/dimens_5dp"
        android:text="三体"
        android:textColor="@color/colorWhite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</RelativeLayout>


</android.support.v7.widget.CardView>