<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#e1e0e0"
    tools:context=".ui.view.activity.ModifyUserInfoActivity">

    <com.shanchain.data.common.ui.toolBar.ArthurToolBar
        android:id="@+id/tb_main"
        style="@style/style_toolbar"
        app:titleColor="@color/colorTextDefault"
        app:titleTextSize="16" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/dimens_20dp">


        <EditText
            android:id="@+id/et_input_nike_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimens_15dp"
            android:background="@drawable/shape_bg_dialog_task_edit"
            android:gravity="top"
            android:hint="@string/enter_nn"
            android:paddingLeft="@dimen/dimens_15dp"
            android:paddingTop="@dimen/dimens_10dp"
            android:paddingRight="@dimen/dimens_15dp"
            android:paddingBottom="@dimen/dimens_10dp"
            android:textColor="@color/colorTextDefault"
            android:textColorHint="@color/colorHint"
            android:textCursorDrawable="@null"
            android:textSize="14sp" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/dimens_20dp">


        <EditText
            android:id="@+id/et_input_sign"
            android:layout_width="match_parent"
            android:layout_height="117dp"
            android:layout_marginLeft="@dimen/dimens_15dp"
            android:background="@color/colorWhite"
            android:gravity="top"
            android:hint="@string/input_qm"
            android:maxLines="1000"
            android:paddingLeft="@dimen/dimens_15dp"
            android:paddingTop="@dimen/dimens_10dp"
            android:paddingRight="@dimen/dimens_15dp"
            android:paddingBottom="@dimen/dimens_10dp"
            android:textColor="@color/colorTextDefault"
            android:textColorHint="@color/colorHint"
            android:textCursorDrawable="@null"
            android:textSize="14sp" />

    </LinearLayout>

</LinearLayout>