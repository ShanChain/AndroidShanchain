<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">


    <LinearLayout
        android:id="@+id/ll_item_contact_letter"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_item_contact_letter"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginLeft="@dimen/dimens_15dp"
            android:gravity="center_vertical"
            android:textColor="@color/colorHint"
            android:textSize="10sp"/>

        <View
            style="@style/style_text_line_match"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <RadioButton
            android:id="@+id/rb_item_contact"
            style="@style/style_radiobutton_report"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dimens_15dp"/>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_item_contact_avatar"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="13dp"/>

        <TextView
            android:id="@+id/tv_item_contact_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dimens_20dp"
            android:layout_marginRight="@dimen/dimens_20dp"
            android:lines="1"
            android:textColor="@color/colorTextDefault"
            android:textSize="14sp"/>
    </LinearLayout>

    <View
        style="@style/style_text_line_match"/>
</LinearLayout>