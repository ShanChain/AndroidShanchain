<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="20dp"
    android:background="@drawable/shape_bg_even_msg"
    android:orientation="vertical"
    android:paddingTop="15dp">

    <include layout="@layout/layout_task_person_info" />


    <TextView
        android:id="@+id/even_message_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="44dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="44dp"
        android:ellipsize="end"
        android:lineSpacingExtra="4dp"
        android:maxLines="5"
        android:layout_gravity="center_horizontal"
        android:text="谁能帮我去大润发买两块电池，只要南孚。7号电池，非常感谢！！"
        android:textColor="@color/aurora_event_msg_text_color"
        android:textSize="14sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/even_message_last_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:text="完成时限：12:00 2018-10-20"
        android:textColor="@color/aurora_event_msg_text_color"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btn_event_task"
        android:layout_width="wrap_content"
        android:layout_height="27dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/shape_btn_even_message_task"
        android:text="查看任务"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/colorHomeBtn"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="10dp"
        android:background="@color/aurora_msg_date_bg_color"></View>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:visibility="gone">

        <TextView
            android:id="@+id/item_tv_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="54dp"
            android:drawableLeft="@drawable/comment"
            android:drawablePadding="10dp"
            android:text="115"
            android:textAlignment="center" />

        <View
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_margin="4dp"
            android:background="@color/aurora_msg_date_bg_color"></View>


        <TextView
            android:id="@+id/item_tv_like"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:layout_marginRight="54dp"
            android:drawableLeft="@drawable/like"
            android:drawablePadding="10dp"
            android:gravity="center"
            android:text="225" />
    </RelativeLayout>

    <cn.jiguang.imui.view.RoundTextView
        android:id="@+id/aurora_tv_msgitem_event"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:gravity="center"
        android:padding="5dp"
        android:text="TextView"
        android:textColor="#000000"
        android:visibility="gone"
        app:backgroundColor="@color/aurora_event_msg_bg_color"
        app:cornerRadius="@dimen/aurora_event_bg_corner_radius" />

</LinearLayout>