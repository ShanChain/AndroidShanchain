<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    xmlns:app="http://schemas.android.com/apk/res-auto"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="@dimen/dimens_5dp"
                                    app:cardCornerRadius="@dimen/dimens_10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/iv_item_head_stag"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:src="@drawable/photo_yue"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#5000"/>

        </FrameLayout>


        <LinearLayout
            android:orientation="vertical"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_item_head_stag_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="@dimen/dimens_10dp"
                android:layout_marginRight="@dimen/dimens_20dp"
                android:lines="1"
                android:text="楚乔传"
                android:textColor="@color/colorWhite"
                android:textSize="14sp"/>

            <TextView
                android:ellipsize="end"
                android:id="@+id/tv_item_head_stag_des"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dimens_10dp"
                android:layout_marginLeft="@dimen/dimens_10dp"
                android:layout_marginRight="@dimen/dimens_20dp"
                android:maxLines="2"
                android:text="一壶煮酒喜相逢，古今多少事，都付笑谈中。"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/sp_12"/>
        </LinearLayout>


    </RelativeLayout>

</android.support.v7.widget.CardView>