<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              android:paddingBottom="@dimen/dimens_10dp"
              android:paddingLeft="7dp"
              android:paddingRight="7dp"
              android:paddingTop="@dimen/dimens_10dp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="95dp"
        app:cardCornerRadius="4dp"
        app:cardElevation="@dimen/dimens_5dp">

        <ImageView
            android:id="@+id/iv_item_head_stag"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"/>
    </android.support.v7.widget.CardView>

    <TextView
        android:id="@+id/tv_item_head_stag_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimens_5dp"
        android:lines="1"
        android:text="楚乔传"
        android:textColor="@color/colorTextThree"
        android:textSize="14sp"/>

    <TextView
        android:id="@+id/tv_item_head_stag_des"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="一壶煮酒喜相逢，古今多少事，都付笑谈中。"
        android:textColor="@color/colorHint"
        android:textSize="@dimen/sp_12"/>


</LinearLayout>