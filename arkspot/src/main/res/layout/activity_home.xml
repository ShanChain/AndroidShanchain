<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.view.activity.HomeActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.baidu.mapapi.map.MapView
            android:id="@+id/map_view_home"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/relative_bottom">
        </com.baidu.mapapi.map.MapView>

        <LinearLayout
            android:id="@+id/linear_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/relative_bottom"
            android:gravity="center_vertical"
            android:background="@drawable/shape_bg_layout_horizontal"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/image_view_location"
                android:layout_width="29dp"
                android:layout_height="24dp"
                android:layout_marginLeft="@dimen/dp_4"
                android:background="@mipmap/home_location" />

            <TextView
                android:id="@+id/text_view_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_4"
                android:text="东经122°南纬103°"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_marginRight="@dimen/dp_4"
            android:background="@drawable/shape_bg_layout_vertical"
            android:layout_alignParentRight="true">

            <ImageView
                android:id="@+id/image_view_info"
                android:layout_width="@dimen/dimens_22dp"
                android:layout_height="@dimen/dimens_22dp"
                android:layout_weight="1"
                android:layout_margin="@dimen/dp_10"
                android:background="@mipmap/home_info"/>

            <ImageView
                android:id="@+id/image_view_history"
                android:layout_width="@dimen/dimens_22dp"
                android:layout_height="@dimen/dimens_22dp"
                android:layout_weight="1"
                android:layout_margin="@dimen/dp_10"
                android:background="@mipmap/home_history"/>

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/relative_bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_marginTop="@dimen/dimens_26dp"
            android:layout_alignParentBottom="true">
            <TextView
                android:id="@+id/text_view_join"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/text_join"
                android:textSize="@dimen/sp_16"
                android:gravity="center_horizontal"/>

            <Button
                android:id="@+id/button_join"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:layout_marginBottom="@dimen/dp_40"
                android:layout_centerHorizontal="true"
                android:text="进入广场"
                android:padding="@dimen/sp_16"
                android:textColor="@color/colorWhite"
                android:background="@drawable/shape_bg_btn_join"/>
        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>