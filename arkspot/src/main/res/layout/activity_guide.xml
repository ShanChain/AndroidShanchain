<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_guide"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">

    </android.support.v4.view.ViewPager>

    <LinearLayout
        android:id="@+id/ll_guide_points"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="43dp"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <View
            android:id="@+id/point_guide_1"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:background="@drawable/selector_guide_point"/>

        <View
            android:id="@+id/point_guide_2"
            android:layout_marginLeft="8dp"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:background="@drawable/selector_guide_point"/>

        <View
            android:id="@+id/point_guide_3"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:layout_marginLeft="8dp"
            android:background="@drawable/selector_guide_point"/>
        <View
            android:id="@+id/point_guide_4"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:layout_marginLeft="8dp"
            android:background="@drawable/selector_guide_point"/>
    </LinearLayout>

    <TextView
        android:gravity="center"
        android:visibility="gone"
        android:id="@+id/btn_guide_join"
        android:background="@drawable/shape_bg_guide_btn"
        android:text="@string/join_mine_1"
        android:textSize="14sp"
        android:textColor="@color/colorWhite"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="58dp"
        android:layout_width="140dp"
        android:layout_height="35dp"/>

</RelativeLayout>
