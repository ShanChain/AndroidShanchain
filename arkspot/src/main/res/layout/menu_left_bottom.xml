<com.shanchain.shandata.widgets.arcMenu.ArcMenu xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:hyman="http://schemas.android.com/apk/res/com.shanchain.shandata"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fbn_menu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="50dp"
    android:layout_marginRight="@dimen/dimens_20dp"
    hyman:position="right_top"
    hyman:radius="120dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/float_btn">

        <TextView
            android:id="@+id/id_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="@color/colorHomeBtn"
            android:textAlignment="center"
            android:gravity="center"
            android:background="@drawable/shape_guide_point_default"
            android:textSize="20sp"
            android:text="赏"
             />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/linear_add_query"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:tag="queryTask"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/float_btn"
            android:src="@mipmap/query_task"
            android:tag="Place" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="查看任务"
            android:textColor="@color/colorBlack" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/linear_add_task"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:tag="addTask"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/float_btn"
            android:src="@mipmap/add_task" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="发布任务"
            android:textColor="@color/colorBlack" />
    </LinearLayout>
