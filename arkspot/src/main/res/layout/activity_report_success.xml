<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.shanchain.shandata.widgets.toolBar.ArthurToolBar
        android:id="@+id/tb_report_success"
        style="@style/style_toolbar"
        app:rightText="确定"
        app:rightTextColor="@color/colorTextDefault"
        app:rightTextSize="14"
        app:titleColor="@color/colorTextDefault"
        app:titleText="举报成功"
        app:titleTextSize="16"/>

    <ImageView
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="100dp"
        android:src="@mipmap/abs_report_icon_submitted_default"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:text="举报已提交，我们将尽快处理"
        android:textSize="18sp"
        android:textColor="@color/colorTextDefault"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="36dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


    <TextView
        android:id="@+id/tv_report_success_protocol"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:textSize="@dimen/sp_12"
        android:textColor="@color/colorTextDefault"
        android:layout_width="252dp"
        android:text="感谢您的举报，我们将根据《十维使用协议》进 行审核（夜间时段稍有延迟）"
        android:layout_gravity="center_horizontal"
        android:layout_height="wrap_content"/>

</LinearLayout>
