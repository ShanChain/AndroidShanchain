<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:background="@color/colorWhite"
              android:layout_width="match_parent"
              android:layout_height="70dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv_item_announcement"
        android:src="@drawable/photo_yue"
        android:layout_marginLeft="@dimen/dimens_15dp"
        android:layout_marginTop="@dimen/dimens_10dp"
        android:layout_marginBottom="@dimen/dimens_10dp"
        android:layout_width="50dp"
        android:layout_height="50dp"/>
    
    <TextView
        android:id="@+id/tv_item_announcement_title"
        android:ellipsize="end"
        android:textSize="14sp"
        android:textColor="@color/colorTextDefault"
        android:text="守则有更新！请仔细阅读穿越守则…"
        android:lines="1"
        android:layout_marginLeft="@dimen/dimens_15dp"
        android:layout_toRightOf="@id/iv_item_announcement"
        android:layout_marginTop="@dimen/dimens_10dp"
        android:layout_marginRight="70dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tv_item_announcement_time"
        android:text="08-30"
        android:layout_marginTop="12dp"
        android:textSize="12sp"
        android:layout_marginRight="@dimen/dimens_15dp"
        android:textColor="#888888"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tv_item_announcement_des"
        android:ellipsize="end"
        android:lines="1"
        android:layout_marginLeft="@dimen/dimens_15dp"
        android:layout_toRightOf="@id/iv_item_announcement"
        android:layout_marginTop="42dp"
        android:text="请仔细阅读以下说明:1、严禁崩皮。不要..."
        android:textSize="@dimen/sp_12"
        android:textColor="@color/colorHint"
        android:layout_width="match_parent"
        android:layout_marginRight="70dp"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tv_item_announcement_words"
        android:layout_alignParentRight="true"
        android:text="1.2千字"
        android:textSize="10sp"
        android:textColor="@color/colorActive"
        android:layout_marginRight="@dimen/dimens_15dp"
        android:layout_marginTop="44dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</RelativeLayout>