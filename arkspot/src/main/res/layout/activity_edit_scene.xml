<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:orientation="vertical">

    <com.shanchain.arkspot.widgets.toolBar.ArthurToolBar
        android:id="@+id/tb_edit_scene"
        style="@style/style_toolbar"
        app:leftImage="@mipmap/abs_roleselection_btn_back_default"
        app:rightText="确定"
        app:rightTextColor="@color/colorTextDefault"
        app:rightTextSize="14"
        app:titleColor="@color/colorTextDefault"
        app:titleText="编辑场景"
        app:titleTextSize="16"/>

    <LinearLayout style="@style/style_text_line_match"/>

    <View style="@style/style_text_line_match"/>

    <RelativeLayout
        android:id="@+id/rl_edit_scene_img"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="?android:attr/selectableItemBackground">

        <android.support.v7.widget.CardView
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dimens_15dp"
            app:cardCornerRadius="8dp">

            <ImageView
                android:id="@+id/iv_edit_scene_img"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/photo_heart"/>

        </android.support.v7.widget.CardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="95dp"
            android:text="编辑头像"
            android:textColor="@color/colorHint"
            android:textSize="@dimen/sp_14"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dimens_15dp"
            android:src="@mipmap/abs_meet_btn_enter_default"/>

    </RelativeLayout>

    <View style="@style/style_text_line_match"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="46dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dimens_15dp"
            android:text="昵称"
            android:textColor="@color/colorTextDefault"/>

        <EditText
            android:id="@+id/et_edit_scene_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="@dimen/dimens_15dp"
            android:background="@null"
            android:lines="1"
            android:maxLength="15"
            android:textColor="@color/colorTextDefault"
            android:textColorHint="@color/colorHint"
            android:textCursorDrawable="@null"
            android:textSize="14sp"/>

    </LinearLayout>

    <View style="@style/style_text_line_match"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimens_15dp"
            android:layout_marginTop="@dimen/dimens_15dp"
            android:text="描述"
            android:textColor="@color/colorTextDefault"/>

        <EditText
            android:gravity="top"
            android:id="@+id/et_edit_scene_des"
            android:maxLength="50"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="95dp"
            android:layout_marginRight="@dimen/dimens_15dp"
            android:layout_marginTop="@dimen/dimens_15dp"
            android:background="@null"
            android:textColor="@color/colorTextDefault"
            android:textColorHint="@color/colorHint"
            android:textCursorDrawable="@null"
            android:textSize="14sp"/>

    </RelativeLayout>

</LinearLayout>
