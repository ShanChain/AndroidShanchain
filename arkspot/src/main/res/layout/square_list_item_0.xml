<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:padding="5dp">
        <cn.jiguang.imui.view.CircleImageView
            android:id="@+id/iv_user_head"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:paddingTop="@dimen/nav_header_vertical_spacing"
            android:src="@drawable/aurora_headicon_default" />
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:gravity="center|left"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_nickname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/login_marjar_color"
                android:textSize="16sp"/>
            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"/>
        </LinearLayout>
        <TextView
            android:id="@+id/tv_attention"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:paddingLeft="10dp"
            android:paddingRight="5dp"
            android:minWidth="50dp"
            android:gravity="center"
            android:textSize="12sp"
            android:textColor="@color/login_marjar_color"
            android:text=""
            android:background="@drawable/squra_attention_n_shape"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="5dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        >
        <com.shanchain.shandata.widgets.ExpandableTextView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/et_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:etv_MaxLinesOnShrink="4"
            android:text="22222222"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            />
        <RelativeLayout
            android:id="@+id/rl_bg"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:visibility="gone"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp">
            <ImageView
                android:id="@+id/im_bg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"/>
            <TextView
                android:id="@+id/tv_nums"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="15dp"
                android:textColor="@color/white"
                />
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="22dp"
            android:layout_marginTop="5dp"
            android:gravity="center|left"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:orientation="horizontal">
            <LinearLayout
                android:id="@+id/ll_praise"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/iv_paise"
                    android:layout_width="@dimen/dimens_15dp"
                    android:layout_height="@dimen/dimens_15dp"/>
                <TextView
                    android:id="@+id/tv_conin"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center|left"
                    android:layout_marginLeft="5dp"/>
            </LinearLayout>
            <ImageView
                android:layout_width="@dimen/dimens_15dp"
                android:layout_height="@dimen/dimens_15dp"
                android:layout_marginLeft="20dp"
                android:src="@mipmap/message_sqeare_icon"/>
            <TextView
                android:id="@+id/tv_message"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center|left"
                android:layout_marginLeft="5dp"/>
            <ImageView
                android:layout_width="@dimen/dimens_15dp"
                android:layout_height="@dimen/dimens_15dp"
                android:layout_marginLeft="20dp"
                android:src="@mipmap/squre_share_icon"/>
            <TextView
                android:id="@+id/tv_share"
                android:layout_width="wrap_content"
                android:gravity="center|left"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"/>
            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/tv_create_time"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center|right"/>
        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="0.6dp"
        android:background="@color/colorBtnBg"/>
</LinearLayout>