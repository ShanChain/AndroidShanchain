<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- dialog样式 -->
    <style name="dialog_custom" parent="@android:style/Theme.Dialog">
        <item name="android:windowIsFloating">true</item>    <!--是否浮在界面上-->
        <item name="android:windowIsTranslucent">false</item> <!--是否半透明-->
        <item name="android:windowNoTitle">false</item>       <!--是否有标题-->
        <item name="android:windowBackground">@android:color/transparent</item> <!--窗口背景色透明-->
        <item name="android:backgroundDimEnabled">true</item> <!--背景是否模糊显示-->
    </style>

    <!-- dialog底部弹出菜单动画 -->
    <style name="bottom_menu_animation" parent="android:Animation">
        <item name="@android:windowEnterAnimation">@anim/bottom_menu_enter</item>
        <item name="@android:windowExitAnimation">@anim/bottom_menu_exit</item>
    </style>

    <!--全屏分割线样式-->
    <style name="style_text_line_match">
        <item name="android:background">@color/colorAccent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
    </style>

    <style name="style_toolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/colorWhite</item>
        <item name="android:layout_height">44dp</item>
    </style>

    <!--定义布局抢占焦点,为的是当进入activity时不让输入框获取焦点-->
    <style name="style_obtain_focus">
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
    </style>

    <style name="style_line_5dp">
        <item name="android:background">@color/colorAccent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">5dp</item>
    </style>

    <!-- 自定义标题栏-自定义属性 -->
    <declare-styleable name="ArthurToolbar">
        <!-- 标题 -->
        <attr name="titleText" format="string" />
        <attr name="titleColor" format="color" />
        <attr name="titleTextSize" format="integer" />
        <attr name="titleImage" format="reference" />
        <!-- 左侧按钮 -->
        <attr name="leftText" format="string" />
        <attr name="leftTextColor" format="color" />
        <attr name="leftTextSize" format="integer" />
        <attr name="leftImage" format="reference" />
        <attr name="leftEnabled" format="boolean" />
        <attr name="leftVisibility" format="boolean"/>
        <!-- 右侧按钮 -->
        <attr name="rightText" format="string" />
        <attr name="rightTextColor" format="color" />
        <attr name="rightTextSize" format="integer" />
        <attr name="rightImage" format="reference" />
        <attr name="rightEnabled" format="boolean" />
        <attr name="rightVisibility" format="boolean"/>
        <!-- 公共属性 -->
        <attr name="btnDisable" format="boolean"/>
    </declare-styleable>

    <style name="style_radiobutton_report">
        <item name="android:button">@drawable/selector_rediobutton</item>
    </style>


</resources>
