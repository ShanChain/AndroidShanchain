<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorWhite">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:gravity="center_vertical">

        <EditText
            android:id="@+id/et_topic"
            android:drawableLeft="@mipmap/abs_release_btn_yopic_default"
            android:paddingLeft="@dimen/dimens_15dp"
            android:hint="话题"
            android:gravity="center_vertical"
            android:textColorHint="@color/colorHint"
            android:drawablePadding="@dimen/dimens_20dp"
            android:lines="1"
            android:textSize="14sp"
            android:textColor="@color/colorTextDefault"
            android:textCursorDrawable="@null"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_marginLeft="@dimen/dimens_15dp"
            android:layout_weight="1"
            android:background="@drawable/shape_edit_search_pressed"/>

        <TextView
            android:id="@+id/tv_topic_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimens_15dp"
            android:layout_marginRight="@dimen/dimens_15dp"
            android:padding="7dp"
            android:text="取消"
            android:textColor="@color/colorTextDefault"
            android:textSize="@dimen/sp_14"/>

    </LinearLayout>

    <View
       style="@style/style_text_line_match"/>

    <TextView
        android:gravity="center_vertical"
        android:layout_marginLeft="@dimen/dimens_15dp"
        android:text="推荐"
        android:textColor="@color/colorHint"
        android:textSize="12sp"
        android:layout_width="wrap_content"
        android:layout_height="30dp"/>

    <View
        style="@style/style_text_line_match"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_topic"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>
